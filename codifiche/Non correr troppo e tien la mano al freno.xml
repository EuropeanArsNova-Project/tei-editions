        <lg>
            <l xml:id="l1">
		      Non <anchor xml:id="l1a1"/>correr<anchor xml:id="l1a2"/> troppo e tien la mano al freno,
	        </l>
        </lg>
        <lg>
            <l xml:id="l2">
		      ché chi <anchor xml:id="l2a5"/>vuol<anchor xml:id="l2a6"/> <anchor xml:id="l2a1"/>ir<anchor xml:id="l2a2"/> più forte <anchor xml:id="l2a3"/>che<anchor xml:id="l2a4"/> non puote
	        </l>
            <l xml:id="l3">
		      tosto <anchor xml:id="l3a3"/>si<anchor xml:id="l3a4"/> stanca <anchor xml:id="l3a5"/>et<anchor xml:id="l3a6"/> subito <anchor xml:id="l3a1"/>percuote<anchor xml:id="l3a2"/>,
	        </l>
            <l xml:id="l4">
		      <anchor xml:id="l4a1"/>et<anchor xml:id="l4a2"/> cade in <supplied>[<anchor xml:id="l4a3"/>terra<anchor xml:id="l4a4"/>, <anchor xml:id="l4a5"/><anchor xml:id="l4a7"/>avaccio<anchor xml:id="l4a8"/> viene a<anchor xml:id="l4a6"/>]</supplied> meno.
	        </l>
        </lg>
        <lg>
            <l xml:id="l5" n="5">
              <anchor xml:id="l5a1"/>Dunque<anchor xml:id="l5a2"/>, non aver fretta, va di passo,
	        </l>
            <l xml:id="l6">
		      ché·<anchor xml:id="l6a3"/>sse<anchor xml:id="l6a4"/> tu cadi <anchor xml:id="l6a1"/><anchor xml:id="l6a5"/>et truoviti<anchor xml:id="l6a6"/> nel basso<anchor xml:id="l6a2"/>,
	        </l>
            <l xml:id="l7">
		      amaro sentirai più <anchor xml:id="l7a1"/>che<anchor xml:id="l7a2"/> <anchor xml:id="l7a3"/>veleno<anchor xml:id="l7a4"/>.
	        </l>
        </lg>
