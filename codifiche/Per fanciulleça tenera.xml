        <body>
            <lg>
                <l xml:id="l1">
                    Per fanciulleça tenera,
                </l>
                <l xml:id="l2">
                    fort’ e crudel ognora sé.
                </l>            
                <l xml:id="l3">
                    Dè! guarda, donna, quanta fé
                </l>
                <l xml:id="l4">
                    amor al cor m’ingenera.
                </l>
            </lg>
            <lg>
                <l xml:id="l5" n="5">
                    El cor mi sento ’ncendere
                </l>
                <l xml:id="l6">
                    <anchor xml:id="l6a3"/>che<anchor xml:id="l6a4"/> ’l tuo disir vago <anchor xml:id="l6a1"/>mi·<supplied reason="illegible">[f]</supplied>fa<anchor xml:id="l6a2"/>,
                </l>
                <l xml:id="l7">
                    e non posso difendere
                </l>
                <l xml:id="l8">
                    dal dolce sguardo che mi sfa.
                </l>
                <l xml:id="l9">
                    El servo ognor ferito sta
                </l>
                <l xml:id="l10" n="10">
                    pregando te soccorrere:
                </l>
                <l xml:id="l11">
                    piacciati se non correre
                </l>
                <l xml:id="l12">
                    a morte ria che ’l menera’.
                </l>
            </lg>
            
        </body>



