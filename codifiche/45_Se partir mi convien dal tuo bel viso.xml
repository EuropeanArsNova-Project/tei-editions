      <body>
         <lg>
            <l xml:id="l1">
               Se partir mi convien dal tuo bel <anchor xml:id="l1a1"/>viso<anchor xml:id="l1a2"/>,
            </l>
            <l xml:id="l2">
               non <anchor xml:id="l2a1"/>aspectar più tenpo<anchor xml:id="l2a2"/>,
            </l>
            <l xml:id="l3">
               <name type="senhal" rend="small-caps"><anchor xml:id="l3a1"/><anchor xml:id="l3a3"/>MA DA’<anchor xml:id="l3a4"/> LENA </name>al mie cor d’amor conquiso.<anchor xml:id="l3a2"/>
            </l>
         </lg>

         <lg>
            <l xml:id="l4">
               <anchor xml:id="l4a1"/>Dagli ochi belli et gratiosi et gai <anchor xml:id="l4a2"/>            
            </l>
            <l xml:id="l5" n="5">
               <anchor xml:id="l5a1"/>spirit’ o<anchor xml:id="l5a2"/> core giamai non si <anchor xml:id="l5a3"/>parte<anchor xml:id="l5a4"/>,
            </l>
            <l xml:id="l6">
               ma tienti nell’amor, come tu·ssai
            </l>
            <l xml:id="l7">
               di non amar altrui, c’amor vuol l’arte;
            </l>
            <l xml:id="l8">
               sì che, di lì tornando in questa parte,
            </l>
            <l xml:id="l9">
               <anchor xml:id="l9a1"/>che·ssarà assai per tenpo,<anchor xml:id="l9a2"/>
            </l>
            <l xml:id="l10" n="10">
               <anchor xml:id="l10a1"/>di tuo dolceça senta el paradiso.<anchor xml:id="l10a2"/>
            </l>
         </lg>
      </body
      
      >
