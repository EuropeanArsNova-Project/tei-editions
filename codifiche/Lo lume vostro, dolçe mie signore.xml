        <body>
            <lg>
                <l xml:id="l1"><anchor xml:id="l1a1"/>Lo lume vostro, <anchor xml:id="l1a2"/><anchor xml:id="l1a4"/>dolçe mie<anchor xml:id="l1a5"/><anchor xml:id="l1a3"/> <anchor xml:id="l1a6"/>signore<anchor xml:id="l1a7"/>,</l>

                <l xml:id="l2"><hi rend="italic"> <anchor xml:id="l2a5"/>Virtute<anchor xml:id="l2a6"/> sic <anchor xml:id="l2a1"/>perfecte <anchor xml:id="l2a2"/>est <anchor xml:id="l2a3"/>ornatum<anchor xml:id="l2a4"/>,</hi></l>

                <l xml:id="l3">Cʼaʼ rei non <anchor xml:id="l3a2"/> <anchor xml:id="l3a4"/>luce e<anchor xml:id="l3a5"/><anchor xml:id="l3a3"/> <anchor xml:id="l3a6"/>aʼ<anchor xml:id="l3a7"/> <anchor xml:id="l3a8"/>boni<anchor xml:id="l3a9"/> semprʼ è chiaro. <anchor xml:id="l3a1"/></l>

                <l xml:id="l4"><anchor xml:id="l4a1"/><hi rend="italic"> <anchor xml:id="l4a2"/>Hoc est notum<anchor xml:id="l4a3"/> et satis [est] probatum </hi></l>

                <l xml:id="l5" n="5">In <anchor xml:id="l5a1"/>quei<anchor xml:id="l5a2"/> <anchor xml:id="l5a3"/>cʼànno sentito<anchor xml:id="l5a4"/> <anchor xml:id="l5a5"/>el gusto amaro<anchor xml:id="l5a6"/>,</l>

                <l xml:id="l6">Nascosamente per conporre errore.<anchor xml:id="l6a1"/></l>
            </lg>
            <lg>
                <l xml:id="l7">Una <anchor xml:id="l7a3"/>donna<anchor xml:id="l7a4"/> <anchor xml:id="l7a5"/> vi <anchor xml:id="l7a6"/> <anchor xml:id="l7a1"/>regge<anchor xml:id="l7a2"/> chʼ<name type="senhal" rend="small-caps">È <anchor xml:id="l7a7"/>SÌ<anchor xml:id="l7a8"/> BELLA</name>,</l>

                <l xml:id="l8">Sul ciel <anchor xml:id="l8a1"/>no<anchor xml:id="l8a2"/> è posta più lucente stella.</l>
            </lg>

        </body>



