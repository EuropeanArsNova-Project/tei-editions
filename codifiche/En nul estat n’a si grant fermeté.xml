        <body>
            <lg>
                <l xml:id="l1"> <anchor xml:id="l1a1"/>En<anchor xml:id="l1a2"/> nul estat n’a si grant fermeté</l>
                <l xml:id="l2"> come en <anchor xml:id="l2a1"/>barat<anchor xml:id="l2a2"/>, selonc mon <anchor xml:id="l2a3"/>jugement<anchor xml:id="l2a4"/>,</l>
                <l xml:id="l3"> <anchor xml:id="l3a1"/>car<anchor xml:id="l3a2"/> soyt que <anchor xml:id="l3a3"/>jonesse<anchor xml:id="l3a4"/>, force et <anchor xml:id="l3a5"/>beauté<anchor xml:id="l3a6"/></l>
                <l xml:id="l4"> proesse, largesse et <anchor xml:id="l4a1"/>entendeme<supplied reason="illegible">[n]</supplied>t<anchor xml:id="l4a2"/></l>
                <l xml:id="l5" n="5"> <anchor xml:id="l5a1"/>facent<anchor xml:id="l5a2"/> <anchor xml:id="l5a9"/><anchor xml:id="l5a3"/>aucunz<anchor xml:id="l5a4"/><anchor xml:id="l5a10"/> <anchor xml:id="l5a5"/>avancier<anchor xml:id="l5a6"/> <anchor xml:id="l5a7"/>grantdement<anchor xml:id="l5a8"/>,</l>
                <l xml:id="l6"> si <anchor xml:id="l6a1"/>vient<anchor xml:id="l6a2"/> la mort qui les prent et <anchor xml:id="l6a3"/>assaut<anchor xml:id="l6a4"/>,</l>
                <l xml:id="l7"> <hi rend="italic"> mais drois barat a son maistre ne <anchor xml:id="l7a1"/>fa<supplied reason="illegible">[u]</supplied>t<anchor xml:id="l7a2"/>.</hi></l>
            </lg>
            <lg>
                <l xml:id="l8"> Fortune preste a acuns grant plenté</l>
                <l xml:id="l9"> d’onnor, d’avoir, d’autres bens largament,</l>
                <l xml:id="l10" n="10"> mais toutes fois en li n’a <anchor xml:id="l10a1"/>se<supplied reason="illegible">[u]</supplied>reté<anchor xml:id="l10a2"/>,</l>
                <l xml:id="l11"> <anchor xml:id="l11a1"/>q<supplied reason="illegible">[uant]</supplied><anchor xml:id="l11a2"/> elle torne <anchor xml:id="l11a3"/>tres<anchor xml:id="l11a4"/> oriblement,</l>
                <l xml:id="l12"> qu’il soit tan sage que <anchor xml:id="l12a1"/>trove<anchor xml:id="l12a2"/> <anchor xml:id="l12a3"/><supplied reason="illegible">[c]</supplied>omm<supplied reason="illegible">[en]</supplied>t<anchor xml:id="l12a4"/></l>
                <l xml:id="l13"> il li eschape sans fayre le <anchor xml:id="l13a1"/>sa<supplied reason="illegible">[u]</supplied>t<anchor xml:id="l13a2"/>,</l>
                <l xml:id="l14"> <anchor xml:id="l14a1"/><hi rend="italic">m<supplied reason="illegible">[ais]</supplied><anchor xml:id="l14a2"/> <supplied reason="illegible">[drois barat a son maistre ne faut]</supplied>.</hi></l>
            </lg>
            <lg>
                <l xml:id="l15" n="15"> Droit <anchor xml:id="l15a1"/>fa<supplied reason="illegible">[i]</supplied>t<anchor xml:id="l15a2"/> souvent raison et loyalté </l>
                <l xml:id="l16"> par dons, par force puyer solement,</l>
                <l xml:id="l17"> et mains saigneur <anchor xml:id="l17a1"/><supplied reason="illegible">[de]</supplied><anchor xml:id="l17a2"/> grant auctorité</l>
                <l xml:id="l18"> sont mis en bas par fol gouvernement;</l>
                <l xml:id="l19"> l’estat comun change legierement,</l>
                <l xml:id="l20" n="20"> si conclus qu’en tous estas a defaut,</l>
                <l xml:id="l21"> <hi rend="italic"> mais drois <supplied reason="illegible">[barat a son maistre ne faut]</supplied>.</hi></l>                
            </lg>

