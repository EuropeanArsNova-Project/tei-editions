        <body>
            <lg>
                <l xml:id="l1">
                    Mille <anchor xml:id="l1a1"/>merçede, Amor<anchor xml:id="l1a2"/>, che <anchor xml:id="l1a3"/>tratto<anchor xml:id="l1a4"/> mʼài 
                </l>
                <l xml:id="l2">
                    di penʼ, e inn allegreça messo mʼài.
                </l>
            </lg>
            <lg>
                <l xml:id="l3">
                    Tu mʼàʼ <anchor xml:id="l3a1"/>da<anchor xml:id="l3a2"/> molta pena et doglia <anchor xml:id="l3a3"/>tratto<anchor xml:id="l3a4"/>
                </l>
                <l xml:id="l4">
                    et per <anchor xml:id="l4a1"/>pietà mi daʼ vita<anchor xml:id="l4a2"/> amorosa,
                </l>
                <l xml:id="l5" n="5">
                    ondʼ <anchor xml:id="l5a3"/>io<anchor xml:id="l5a4"/> son senpre a·tte <anchor xml:id="l5a1"/>sugetto<anchor xml:id="l5a2"/> ratto
                </l>
                <l xml:id="l6">
                    a·<anchor xml:id="l6a1"/>ffarti<anchor xml:id="l6a2"/> con disio festa <anchor xml:id="l6a3"/>gioiosa<anchor xml:id="l6a4"/>.
                </l>
                <l xml:id="l7">
                    Però <anchor xml:id="l7a3"/>mie<anchor xml:id="l7a4"/> <anchor xml:id="l7a5"/>vita<anchor xml:id="l7a6"/> non ti <anchor xml:id="l7a1"/>sarà<anchor xml:id="l7a2"/> ascosa,
                </l>
                <l xml:id="l8">
                    ançi fia teco, et tua <anchor xml:id="l8a1"/>ovunche<anchor xml:id="l8a2"/> vai. 
                </l>
            </lg>
        </body>
