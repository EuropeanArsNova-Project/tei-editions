         <lg>
            <l xml:id="l1">
               <anchor xml:id="l1a1"/>La<anchor xml:id="l1a2"/> <anchor xml:id="l1a3"/>bionda<anchor xml:id="l1a4"/> <anchor xml:id="l1a9"/>treccia<anchor xml:id="l1a10"/> <anchor xml:id="l1a5"/>di<anchor xml:id="l1a6"/> <anchor xml:id="l1a7"/>fin or<anchor xml:id="l1a8"/> colore
            </l>
            <l xml:id="l2">
               <anchor xml:id="l2a1"/>m’à<anchor xml:id="l2a2"/> <anchor xml:id="l2a3"/>legata<anchor xml:id="l2a4"/> la <anchor xml:id="l2a5"/>ment’ a<anchor xml:id="l2a6"/> <anchor xml:id="l2a7"/>meço<anchor xml:id="l2a8"/> <anchor xml:id="l2a9"/>’l<anchor xml:id="l2a10"/> core;
            </l>
         </lg>
         <lg>
            <l xml:id="l3">
               <anchor xml:id="l3a7"/>simile<anchor xml:id="l3a8"/> <anchor xml:id="l3a1"/>’l<anchor xml:id="l3a2"/> viso, a <anchor xml:id="l3a3"/>cu’ ell’<anchor xml:id="l3a4"/>onbra <anchor xml:id="l3a5"/>face<anchor xml:id="l3a6"/>,
            </l>     
            <l xml:id="l4">
               ove <anchor xml:id="l4a1"/>ridon<anchor xml:id="l4a2"/> le perl’ <anchor xml:id="l4a3"/>e’<anchor xml:id="l4a4"/> vaghi <anchor xml:id="l4a5"/>fiori<anchor xml:id="l4a6"/>,
            </l>
            <l xml:id="l5" n="5">
               che <anchor xml:id="l5a1"/>come<anchor xml:id="l5a2"/> <anchor xml:id="l5a3"/>pura<anchor xml:id="l5a4"/> neve al sol mi sface
            </l>
            <l xml:id="l6">
               et non si cura perch’ <anchor xml:id="l6a1"/>i’<anchor xml:id="l6a2"/> mi scolori.
            </l>
            <l xml:id="l7">
               <anchor xml:id="l7a7"/>E<anchor xml:id="l7a8"/> <anchor xml:id="l7a1"/>son<anchor xml:id="l7a2"/> <anchor xml:id="l7a9"/>gli<anchor xml:id="l7a10"/> <anchor xml:id="l7a3"/>effecti<anchor xml:id="l7a4"/> di mie <anchor xml:id="l7a5"/>ma’ maggiori<anchor xml:id="l7a6"/>
            </l>
            <l xml:id="l8">
               che·lle <anchor xml:id="l8a1"/>parol’<anchor xml:id="l8a2"/>, e be·llo vede Amore.
            </l>
         </lg>
         <lg>
            <l xml:id="l9">
               Adunque, Amor, che sai lo stato mio
            </l>
            <l xml:id="l10" n="10">
               e che mi fa’ nel foco esser beato,
            </l>
            <l xml:id="l11">
               dè, fa’ che nel <anchor xml:id="l11a1"/>bel<anchor xml:id="l11a2"/> viso, il qual io
            </l>
            <l xml:id="l12">
               <anchor xml:id="l12a1"/>con voci<anchor xml:id="l12a2"/> assa’ piatose t’ò chiamato,
            </l>
            <l xml:id="l13">
               che per me vi ti veggia a giusto grato,
            </l>
            <l xml:id="l14">
               a·cciò che <anchor xml:id="l18a1"/>me<supplied>[n]</supplied><anchor xml:id="l18a2"/> non vegna nel dolore.
            </l>
         </lg>
