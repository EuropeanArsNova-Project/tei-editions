        <body>
            <lg>
                <l xml:id="l1">
                    <anchor xml:id="l1a1"/>Par<anchor xml:id="l1a2"/> <anchor xml:id="l1a3"/>les<anchor xml:id="l1a4"/> bons <anchor xml:id="l1a5"/>Gedeon<anchor xml:id="l1a6"/> et Sanson delivré
                </l>
                <l xml:id="l2">
                    fu le peuple de Dieu de <anchor xml:id="l2a1"/>tous<anchor xml:id="l2a2"/> ses <anchor xml:id="l2a3"/>enemis<anchor xml:id="l2a4"/>,
                </l>
                <l xml:id="l3">
                    <anchor xml:id="l3a1"/>de mourtel<anchor xml:id="l3a2"/> servitù <anchor xml:id="l3a3"/>au quel<anchor xml:id="l3a4"/> estoit livré
                </l>
                <l xml:id="l4">
                    <anchor xml:id="l4a5"/>pour<anchor xml:id="l4a6"/> la <anchor xml:id="l4a1"/>iniquité<anchor xml:id="l4a2"/> <anchor xml:id="l4a3"/>que<anchor xml:id="l4a4"/> il avoit comis.
                </l>
                <l xml:id="l5" n="5">
                    <anchor xml:id="l5a1"/>Ainsi <anchor xml:id="l5a3"/>sera<anchor xml:id="l5a4"/><anchor xml:id="l5a2"/> le monde de bas en <anchor xml:id="l5a5"/>haut<anchor xml:id="l5a6"/> <anchor xml:id="l5a7"/>remis<anchor xml:id="l5a8"/>,
                </l>
                <l xml:id="l6">
                    en <anchor xml:id="l6a1"/>la<anchor xml:id="l6a2"/> <anchor xml:id="l6a3"/>sainte<anchor xml:id="l6a4"/> <anchor xml:id="l6a5"/>vretu<anchor xml:id="l6a6"/> de <anchor xml:id="l6a7"/>celi<anchor xml:id="l6a8"/> qui ne ment,
                </l>
                <l xml:id="l7">
                    <hi rend="italic">par le <anchor xml:id="l7a1"/>souverayn<anchor xml:id="l7a2"/> <anchor xml:id="l7a3"/>pape<anchor xml:id="l7a4"/> qui s’apelle <anchor xml:id="l7a5"/>Clement<anchor xml:id="l7a6"/></hi>.
                </l>
            </lg>
            <lg>
                <l xml:id="l8">
                    Ire, devisïon et partïalité,
                </l>
                <l xml:id="l9">
                    inordiné desir, desus orgueil assis,
                </l>
                <l xml:id="l10" n="10">
                    sunt cause de la sisme, per quoy humilité,
                </l>
                <l xml:id="l11">
                    unïon, karité et la foy sont vis mis:
                </l>
                <l xml:id="l12">
                    le mondes est vis mis, se Diex, par sum avis,
                </l>
                <l xml:id="l13">
                    ne le remet en vïe de <anchor xml:id="l13a1"/>verai<anchor xml:id="l13a2"/> sentiment,
                </l>
                <l xml:id="l14">
                   <hi rend="italic">par le souverayn pape qui s’apelle Clement!</hi>
                </l>
            </lg>
        </body>
