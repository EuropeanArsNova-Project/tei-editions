      <body>
         <lg>
            <l xml:id="l1">
                LENA, virtù et speranza ogni cor duro
            </l>
            <l xml:id="l2">
                vince per cert’, Amore,
            </l>
            <l xml:id="l3">
                chi segue te come gentil signore.
            </l>
        </lg>
        <lg>
            <l xml:id="l4">
                Per lunga prova così crudeltà
            </l>
            <l xml:id="l5" n="5">
                dall’animo si toglie
            </l>
            <l xml:id="l6">
                et fa spesso mutar costume et stile.
            </l>
            <l xml:id="l7">
                Pietosa LENA adornò gran biltà,
            </l>
            <l xml:id="l8">
                canbiando altere voglie,
            </l>
            <l xml:id="l9">
                sì che ’l pensier crudel diventò umile.
            </l>
            <l xml:id="l10" n="10">
                LEN’ Amorosa donna fa gentile
            </l>
            <l xml:id="l11">
                et mostra quel valore
            </l>
            <l xml:id="l12">
                che·ttiene in sé l’innamorato core.
            </l>
         </lg>
      </body>
