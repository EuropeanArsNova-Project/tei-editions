                <l xml:id="l4">Se ʼl pastor che <anchor xml:id="l4a1"/>·mmi<anchor xml:id="l4a2"/> para non mi lascia</l>
                <l xml:id="l5" n="5">pasturar più in <anchor xml:id="l5a1"/>quella<anchor xml:id="l5a2"/> gran foresta,</l>
                <l xml:id="l6"><anchor xml:id="l6a1"/>starò<anchor xml:id="l6a2"/> sicura pascendo <anchor xml:id="l6a3"/>in<anchor xml:id="l6a4"/> gran festa,</l>
            </lg>
            <lg>
                <l xml:id="l7"><anchor xml:id="l7a1"/><anchor xml:id="l7a2"/>belando<anchor xml:id="l7a3"/> con <anchor xml:id="l7a6"/>dilettʼ<anchor xml:id="l7a7"/> e <anchor xml:id="l7a4"/>ssaltellare<anchor xml:id="l7a5"/></l>
                <l xml:id="l8"><anchor xml:id="l8a2"/>e<anchor xml:id="l8a3"/> ʼl pascer della selva et rugumare.<anchor xml:id="l8a1"/> </l>                
            </lg>
