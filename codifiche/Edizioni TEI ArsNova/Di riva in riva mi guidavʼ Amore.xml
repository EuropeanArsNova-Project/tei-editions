      <body>
         <lg>
            <l xml:id="l1">
                Di riva <anchor xml:id="l1a1"/>in<anchor xml:id="l1a2"/> riva mi <anchor xml:id="l1a3"/>guidavʼ<anchor xml:id="l1a4"/> Amore,
            </l>
            <l xml:id="l2">
                <anchor xml:id="l2a3"/>cercandʼ<anchor xml:id="l2a4"/> un <anchor xml:id="l2a5"/>mie sparvier<anchor xml:id="l2a6"/>: <anchor xml:id="l2a7"/>aʼ ppieʼ <anchor xml:id="l2a1"/>dʼun<anchor xml:id="l2a2"/> monte
            </l>
            <l xml:id="l3">
                trovaʼ <anchor xml:id="l3a3"/>bagnar<anchor xml:id="l3a4"/> più <anchor xml:id="l3a5"/>donnʼ <anchor xml:id="l3a1"/>a una fonte<anchor xml:id="l3a2"/>.
            </l>
            <l xml:id="l4">
                Eravi di biltà nomata <anchor xml:id="l4a1"/>Elena<anchor xml:id="l4a2"/>,
            </l>
            <l xml:id="l5" n="5">
                lo cui piacer <anchor xml:id="l5a1"/>mi face gir<anchor xml:id="l5a2"/> pensoso
            </l>
            <l xml:id="l6">
                <anchor xml:id="l6a5"/>et poi<anchor xml:id="l6a6"/> mi <anchor xml:id="l6a1"/>feʼ<anchor xml:id="l6a2"/> di <anchor xml:id="l6a7"/>lei <anchor xml:id="l6a3"/>veder<anchor xml:id="l6a4"/> gioioso.
            </l>
            <l xml:id="l7">
                Poi <anchor xml:id="l7a1"/>chinai<anchor xml:id="l7a2"/> gli ochi per lʼ<anchor xml:id="l7a3"/>onestʼ<anchor xml:id="l7a4"/> andare
            </l>
            <l xml:id="l8">
                et temoroso mi scostai <anchor xml:id="l8a1"/>dallʼacque<anchor xml:id="l8a2"/>,
            </l>
            <l xml:id="l9">
                <anchor xml:id="l9a1"/>chʼera<anchor xml:id="l9a2"/> ciascuna come prima nacque.
            </l>
        </lg>
        <lg>
            <l xml:id="l10" n="10">
                <anchor xml:id="l10a1"/>Cantando dirivaʼ per <anchor xml:id="l10a2"/>un<anchor xml:id="l10a3"/> bel piano,
            </l>
            <l xml:id="l11">
                et <anchor xml:id="l11a2"/>trovai<anchor xml:id="l11a3"/> lo <anchor xml:id="l11a4"/>sparver<anchor xml:id="l11a5"/> a mano a mano.<anchor xml:id="l11a1"/>
            </l>
        </lg>
