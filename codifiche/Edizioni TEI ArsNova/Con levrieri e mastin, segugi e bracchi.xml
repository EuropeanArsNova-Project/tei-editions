        <body>
            <lg>
                <l xml:id="l1">
                    Con <anchor xml:id="l1a5"/>levrieri<anchor xml:id="l1a6"/> e <anchor xml:id="l1a1"/>mastin<anchor xml:id="l1a2"/>, <anchor xml:id="l1a3"/>segugi<anchor xml:id="l1a4"/> <anchor xml:id="l1a7"/>e<anchor xml:id="l1a8"/> <anchor xml:id="l1a9"/>bracchi<anchor xml:id="l1a10"/>,
                </l>
                <l xml:id="l2">
                    cacciando vo <anchor xml:id="l2a3"/>da·ssera<anchor xml:id="l2a4"/> <anchor xml:id="l2a1"/>et<anchor xml:id="l2a2"/> da <anchor xml:id="l2a5"/>mattina<anchor xml:id="l2a6"/>
                </l>
                <l xml:id="l3">               
                    sol per <anchor xml:id="l3a1"/>pigliar<anchor xml:id="l3a2"/> la <anchor xml:id="l3a3"/>bianca<anchor xml:id="l3a4"/> porcellina.
                </l>
                <l xml:id="l4">
                    Et <anchor xml:id="l4a1"/>per le<anchor xml:id="l4a2"/> vie dov’ ella più <anchor xml:id="l4a3"/>cammina<anchor xml:id="l4a4"/>
                </l>
                <l xml:id="l5" n="5">
                    <anchor xml:id="l5a1"/>piediche<anchor xml:id="l5a2"/> ò tese et molti <anchor xml:id="l5a3"/>forti<anchor xml:id="l5a4"/> lacci
                </l>
                <l xml:id="l6">
                    e ancor <anchor xml:id="l6a1"/>non di men<anchor xml:id="l6a2"/> l’aspetto <anchor xml:id="l6a3"/>a’ ghiacci<anchor xml:id="l6a4"/>.
                </l>
                <l xml:id="l7">
                    <anchor xml:id="l7a3"/>Non lascerò<anchor xml:id="l7a4"/> <anchor xml:id="l7a1"/>pe’ neve né per<anchor xml:id="l7a2"/> ghiacci,
                </l>
                <l xml:id="l8">
                    <anchor xml:id="l8a3"/>per<anchor xml:id="l8a4"/> <anchor xml:id="l8a7"/>istivo<anchor xml:id="l8a8"/> <anchor xml:id="l8a1"/>calor<anchor xml:id="l8a2"/> né per <anchor xml:id="l8a5"/>ispesa<anchor xml:id="l8a6"/>,
                </l>
                <l xml:id="l9">
                    ch’i <anchor xml:id="l9a3"/>non la<anchor xml:id="l9a4"/> <anchor xml:id="l9a5"/>segua<anchor xml:id="l9a6"/> <anchor xml:id="l9a1"/>infin ch’i l’arò<anchor xml:id="l9a2"/> <anchor xml:id="l9a7"/>presa<anchor xml:id="l9a8"/>,
                </l>
            </lg>
            <lg>
                <l xml:id="l10" n="10">
                    perché <anchor xml:id="l10a1"/>sommo<anchor xml:id="l10a2"/> <anchor xml:id="l10a3"/>dilecto<anchor xml:id="l10a4"/> spero il giorno
                </l>
                <l xml:id="l11">
                    <anchor xml:id="l11a3"/>ch’i’<anchor xml:id="l11a4"/> sonerò <anchor xml:id="l11a5"/><anchor xml:id="l11a1"/>a<anchor xml:id="l11a2"/> caccia<anchor xml:id="l11a6"/> presa <anchor xml:id="l11a7"/>’l<anchor xml:id="l11a8"/> corno.
                </l>
            </lg>
        </body>
