      <body>
         <lg>
            <l xml:id="l1">
               <anchor xml:id="l1a3"/>Donna<anchor xml:id="l1a4"/> la mente mia è sì <anchor xml:id="l1a1"/>’nvaghita<anchor xml:id="l1a2"/>
            </l>
            <l xml:id="l2">
               del tuo <anchor xml:id="l2a1"/>gentil<anchor xml:id="l2a2"/> <anchor xml:id="l2a3"/>aspetto<anchor xml:id="l2a4"/>,
            </l>
            <l xml:id="l3">
               ch’altro <anchor xml:id="l3a1"/>dilecto <span type="space"/> non<anchor xml:id="l3a2"/> à la mia vita.
            </l>
         </lg>
         <lg>      
            <l xml:id="l4">
               <anchor xml:id="l4a1"/>Io guardo<anchor xml:id="l4a2"/> gli <anchor xml:id="l4a3"/>atti<anchor xml:id="l4a4"/> <anchor xml:id="l4a5"/>begli e<anchor xml:id="l4a6"/> <anchor xml:id="l4a7"/>onesti e vaghi<anchor xml:id="l4a8"/>,
            </l>
            <l xml:id="l5" n="5">
               che <anchor xml:id="l5a1"/>contentan<anchor xml:id="l5a2"/> el cor sol <anchor xml:id="l5a3"/>di<anchor xml:id="l5a4"/> vedere;
            </l>
            <l xml:id="l6">
               <anchor xml:id="l6a1"/>né<anchor xml:id="l6a2"/> <anchor xml:id="l6a5"/>cos’<anchor xml:id="l6a6"/>al mondo <anchor xml:id="l6a3"/>so che più m’apaghi<anchor xml:id="l6a4"/>
            </l>
            <l xml:id="l7">
               che <anchor xml:id="l7a1"/>mirar<anchor xml:id="l7a2"/> te, né <anchor xml:id="l7a3"/>cheggio<anchor xml:id="l7a4"/> altro piacere,
            </l>
            <l xml:id="l8">
               però ch’à <anchor xml:id="l8a1"/>di<anchor xml:id="l8a2"/> <anchor xml:id="l8a3"/>virtù<anchor xml:id="l8a4"/> tanto <anchor xml:id="l8a5"/>podere<anchor xml:id="l8a6"/>
            </l>
            <l xml:id="l9">
               la tua <anchor xml:id="l9a3"/>soma<anchor xml:id="l9a4"/> <anchor xml:id="l9a1"/>biltade<anchor xml:id="l9a2"/>,
            </l>
            <l xml:id="l10" n="10">
               <anchor xml:id="l10a1"/>ch’a<anchor xml:id="l10a2"/> <anchor xml:id="l10a5"/>onestade<anchor xml:id="l10a6"/>, <span type="space"/> <anchor xml:id="l10a3"/>Amor, sempre<anchor xml:id="l10a4"/> <anchor xml:id="l10a7"/>m’invita<anchor xml:id="l10a8"/>.	
            </l>
         </lg>
