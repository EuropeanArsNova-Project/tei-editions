      <body>
        <lg>
            <l xml:id="l1">
		        Qual <anchor xml:id="l1a3"/>lege<anchor xml:id="l1a4"/> move la <anchor xml:id="l1a1"/>volubel<anchor xml:id="l1a2"/> rota?
	        </l>
            <l xml:id="l2">
		        Fortuna <anchor xml:id="l2a1"/>cieca<anchor xml:id="l2a2"/>: <anchor xml:id="l2a3"/><anchor xml:id="l2a5"/>l’om<anchor xml:id="l2a6"/> da<anchor xml:id="l2a4"/> <anchor xml:id="l2a7"/>nul’<anchor xml:id="l2a8"/> ascende
	        </l>
            <l xml:id="l3">
		        e ’l più <anchor xml:id="l3a1"/>cativo<anchor xml:id="l3a2"/> più <anchor xml:id="l3a3"/>triumpho<anchor xml:id="l3a4"/> prende;
	        </l>
            <l xml:id="l4">
		        quello a chi de beltà la verde fronde
	        </l>
            <l xml:id="l5" n="5">
                cinge la testa, el fianco in tera preme
	        </l>
            <l xml:id="l6">
                e mendicando reduce <anchor xml:id="l6a1"/>alle<anchor xml:id="l6a2"/> streme.
	        </l>
        </lg>
        <lg>
            <l xml:id="l7">
		        <anchor xml:id="l7a1"/>Vedese<anchor xml:id="l7a2"/> la <anchor xml:id="l7a5"/>virtù<anchor xml:id="l7a6"/> quando <anchor xml:id="l7a3"/><anchor xml:id="l7a7"/>l’om<anchor xml:id="l7a8"/> perde<anchor xml:id="l7a4"/>
	        </l>
            <l xml:id="l8">
		        e ’l <anchor xml:id="l8a5"/>vicio<anchor xml:id="l8a6"/> <anchor xml:id="l8a1"/>quando ’l entr’ <anchor xml:id="l8a3"/>al<anchor xml:id="l8a4"/><anchor xml:id="l8a2"/> prato verde.
	        </l>
        </lg>
       </body>
