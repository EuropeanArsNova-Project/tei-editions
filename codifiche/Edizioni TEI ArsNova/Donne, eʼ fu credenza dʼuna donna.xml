      <body>
         <lg>
            <l xml:id="l1">
                Donne, eʼ fu credenza dʼuna donna
            </l>
            <l xml:id="l2">
                con falsi modi suoi far tanto <anchor xml:id="l2a1"/>chʼio<anchor xml:id="l2a2"/>
            </l>
            <l xml:id="l3">
                suo fussi; <anchor xml:id="l3a1"/>iʼ me nʼavidi<anchor xml:id="l3a2"/> e son pur mio.
            </l>
        </lg>
        <lg>
            <l xml:id="l4">
                <anchor xml:id="l4a4"/>Co<anchor xml:id="l4a5"/> gli <anchor xml:id="l4a6"/>occhi<anchor xml:id="l4a7"/> agli occhi <anchor xml:id="l4a1"/>e con<anchor xml:id="l4a2"/> parlar<anchor xml:id="l4a3"/> coperto
            </l>
            <l xml:id="l5" n="5">
                <anchor xml:id="l5a1"/>mostrava<anchor xml:id="l5a2"/> a me di me che <anchor xml:id="l5a3"/>fosse<anchor xml:id="l5a4"/> presa,
            </l>
            <l xml:id="l6">
                <anchor xml:id="l6a1"/>di<anchor xml:id="l6a2"/> chʼio servia costei; e quando merto
            </l>
            <l xml:id="l7">
                <anchor xml:id="l7a1"/>volli<anchor xml:id="l7a2"/> in <anchor xml:id="l7a6"/>segreto <anchor xml:id="l7a3"/>misesi <anchor xml:id="l7a4"/>a<anchor xml:id="l7a5"/> difesa.
            </l>
            <l xml:id="l8">
                Ondʼ io partito son <anchor xml:id="l8a1"/>dalla<anchor xml:id="l8a2"/> contesa
            </l>
            <l xml:id="l9">
                e <anchor xml:id="l9a1"/>fuggo<anchor xml:id="l9a2"/>, avendo a me me, tal <anchor xml:id="l9a3"/>disio<anchor xml:id="l9a4"/>.
            </l>
            <l xml:id="l10" n="10">
                <anchor xml:id="l10a1"/>E <anchor xml:id="l10a2"/>lascio<anchor xml:id="l10a5"/> lei <anchor xml:id="l10a3"/>con<anchor xml:id="l10a4"/> pensier falso e rio.
            </l>
        </lg>
