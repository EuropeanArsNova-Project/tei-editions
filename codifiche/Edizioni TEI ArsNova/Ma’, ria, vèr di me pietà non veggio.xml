      <body>
         <lg>
            <l xml:id="l1">
                MA’, RIA, vèr di me pietà non veggio
            </l>
            <l xml:id="l2">
                et però, rie Fortuna
            </l>
            <l xml:id="l3">
                sanza merzé alcuna,
            </l>
            <l xml:id="l4">
                fammi che vuoi, ché far non mi puo’ peggio.
            </l>
        </lg>
        <lg>
            <l xml:id="l5" n="5">
                Disposto son e’ colpi sostenere
            </l>
            <l xml:id="l6">
                di tu’ aspra saetta velenosa,
            </l>
            <l xml:id="l7">
                né di mai fare contr’ a·ttuo volere,
            </l>
            <l xml:id="l8">
                c’ogni saetta mi par gratïosa,
            </l>
            <l xml:id="l9">
                però ch’i’ spero pure alquanto posa
            </l>
            <l xml:id="l10" n="10">
                in lungo tempo avere
            </l>
            <l xml:id="l11">
                et di pianto piacere,
            </l>
            <l xml:id="l12">
                se ’l buon proverbio fa vero suo seggio.
            </l>
         </lg>
      </body>
