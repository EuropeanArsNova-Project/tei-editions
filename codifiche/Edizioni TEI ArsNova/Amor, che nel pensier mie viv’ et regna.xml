      <body>
        <lg>
            <l xml:id="l1">
		      <anchor xml:id="l1a1"/>Amor<anchor xml:id="l1a2"/>, che nel pensier <anchor xml:id="l1a3"/>mie<anchor xml:id="l1a4"/> viv’ et regna,
	        </l>
            <l xml:id="l2">
		      d’est’ alta donna sopra <anchor xml:id="l2a3"/>ogn’<anchor xml:id="l2a4"/> <anchor xml:id="l2a1"/>altra<anchor xml:id="l2a2"/> <anchor xml:id="l2a5"/>insegna<anchor xml:id="l2a6"/>.
	        </l>
        </lg>
        <lg>
            <l xml:id="l3">
		      Amor, Amor, <anchor xml:id="l3a1"/>ogni<anchor xml:id="l3a2"/> pensier m’<anchor xml:id="l3a3"/>induce<anchor xml:id="l3a4"/>,
	        </l>
            <l xml:id="l4">
		      con dolce <anchor xml:id="l4a1"/>affanno<anchor xml:id="l4a2"/>, ben servir amore,
	        </l>
            <l xml:id="l5" n="5">
              però che d’ogne <anchor xml:id="l5a1"/>nobiltà<anchor xml:id="l5a2"/> traluce
	        </l>
            <l xml:id="l6">
		      la donna <anchor xml:id="l6a1"/>in<anchor xml:id="l6a2"/> vista fonte de valore.
	        </l>
            <l xml:id="l7">
		      <anchor xml:id="l7a3"/>Dunque<anchor xml:id="l7a4"/>, <anchor xml:id="l7a1"/>dè<anchor xml:id="l7a2"/>, <anchor xml:id="l7a5"/>piaccia<anchor xml:id="l7a6"/> al mio <anchor xml:id="l7a7"/>degno<anchor xml:id="l7a8"/> signore
	        </l>
            <l xml:id="l8">
		      che mi conservi in questa <anchor xml:id="l8a1"/>donna<anchor xml:id="l8a2"/> degna.
	        </l>
        </lg>
       </body>
