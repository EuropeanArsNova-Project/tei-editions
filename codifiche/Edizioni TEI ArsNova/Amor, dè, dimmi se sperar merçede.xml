      <body>
        <lg>
            <l xml:id="l1">
		    Amor, dè, <anchor xml:id="l1a1"/>dimmi<anchor xml:id="l1a2"/> se sperar merçede
	    </l>
            <l xml:id="l2">
		    si <anchor xml:id="l2a1"/>può giama’<anchor xml:id="l2a2"/>, per <anchor xml:id="l2a3"/>ben<anchor xml:id="l2a4"/> servir con fede,
	    </l>
        </lg>
        <lg>
         <l xml:id="l3">
		 perché, dolce <anchor xml:id="l3a1"/>signor<anchor xml:id="l3a2"/>, se ’l mie servire
	 </l>
         <l xml:id="l4">
		 non si dé meritare,
	 </l>
         <l xml:id="l5" n="5">
		 <anchor xml:id="l5a1"/>quest’<anchor xml:id="l5a2"/> angosciose pene et lo martire
	 </l>
         <l xml:id="l6">
		 no·lle <anchor xml:id="l6a1"/>potrò<anchor xml:id="l6a2"/> durare:
	 </l>
         <l xml:id="l7">
		 dè, signor caro, fa’ che ’l <anchor xml:id="l7a1"/>ben<anchor xml:id="l7a2"/> amare
	 </l>
         <l xml:id="l8">
		 merto riceva di <anchor xml:id="l8a1"/>suo<anchor xml:id="l8a2"/> ferma fede.
	 </l>
        </lg>
       </body>
