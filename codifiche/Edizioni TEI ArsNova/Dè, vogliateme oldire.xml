      <body>
         <lg>
            <l xml:id="l1">
                Dè, vogliateme oldire,
            </l>
            <l xml:id="l2">
                dona, el mio gran dolore,
            </l>
            <l xml:id="l3">
                c’amor me struçe ’l core:
            </l>
            <l xml:id="l4">
                se <anchor xml:id="l4a1"/>non<anchor xml:id="l4a2"/> m’aiuti, me vedrai morire.
            </l>
        </lg>
        <lg>
            <l xml:id="l5" n="5">
                Donna, se m’aldirai
            </l>
            <l xml:id="l6">
                con toa çentil figura,
            </l>
            <l xml:id="l7">
                so ben che me trarrai
            </l>
            <l xml:id="l8">
                <anchor xml:id="l8a1"/>de<anchor xml:id="l8a2"/> sì mortal ardura.
            </l>
            <l xml:id="l9">
                Oimè, se <supplied reason="illegible">[de]</supplied> l’ <anchor xml:id="l9a1"/>a<supplied reason="illegible">[r]</supplied>dura <anchor xml:id="l9a2"/>
            </l>
            <l xml:id="l10" n="10">
                non me potrai açutare,
            </l>
            <l xml:id="l11">
                e di cotal affare,
            </l>
            <l xml:id="l12">
                con umel pianto dirai el to  <anchor xml:id="l12a1"/><supplied reason="illegible">[pentire]</supplied> <anchor xml:id="l12a2"/>.
            </l>
        </lg>
      </body>
