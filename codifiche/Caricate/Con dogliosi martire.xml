      <body>
         <lg>
            <l xml:id="l1">
                Con <anchor xml:id="l1a1"/>dogliosi<anchor xml:id="l1a2"/> martire,
            </l>
            <l xml:id="l2">
                <anchor xml:id="l2a1"/>che ’l<anchor xml:id="l2a2"/> mio <anchor xml:id="l2a3"/>cor <supplied reason="illegible">[e]</supplied><anchor xml:id="l2a4"/> tormenta,
            </l>
            <l xml:id="l3">
                <anchor xml:id="l3a1"/>romango<anchor xml:id="l3a2"/> descontenta, 
            </l>
            <l xml:id="l4">
                <anchor xml:id="l4a1"/>segnor<anchor xml:id="l4a2"/> mio caro, del vostro partire.
            </l>
        </lg>
        <lg>
            <l xml:id="l5" n="5">
                Via ve n’andate et io, 
            </l>
            <l xml:id="l6">
                lassa, romango sconsolatamente. 
            </l>
            <l xml:id="l7">
                O dolce signor mio, 
            </l>
            <l xml:id="l8">
                per Dio ve prego, non v’esca di mente 
            </l>
            <l xml:id="l9">
                le lagreme dolente 
            </l>
            <l xml:id="l10" n="10">
                che nel partir gittasti, 
            </l>
            <l xml:id="l11">
                quando che me lassasti 
            </l>
            <l xml:id="l12">
                quel dolçe signo del to bon desire. 
            </l>
        </lg>
      </body>
