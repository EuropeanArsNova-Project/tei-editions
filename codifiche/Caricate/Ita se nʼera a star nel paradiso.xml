      <body>
         <lg>
            <l xml:id="l1">
                <anchor xml:id="l1a1"/>Ita<anchor xml:id="l1a4"/> se nʼera<anchor xml:id="l1a3"/> a star nel paradiso<anchor xml:id="l1a2"/>:
            </l>
            <l xml:id="l2">
                <anchor xml:id="l2a1"/>cogliendo<anchor xml:id="l2a2"/> fior Proserpina cantava
            </l>
            <l xml:id="l3">
                quando per lʼamor <anchor xml:id="l3a1"/>suo<anchor xml:id="l3a2"/> Pluto cercava.
            </l>
            <l xml:id="l4">
                Così mʼ<anchor xml:id="l4a1"/>apparve<anchor xml:id="l4a2"/>, ondʼ io mʼ<anchor xml:id="l4a3"/>innamorava<anchor xml:id="l4a4"/>,
            </l>
            <l xml:id="l5" n="5">
                <anchor xml:id="l5a1"/>la donna che parò le mani al viso<anchor xml:id="l5a2"/>,
            </l>
            <l xml:id="l6">
                per far <anchor xml:id="l6a1"/>che<anchor xml:id="l6a2"/> mai da·llei fossi diviso.
            </l>
        </lg>
        <lg>
            <l xml:id="l7">
                <anchor xml:id="l7a1"/>Benché<anchor xml:id="l7a2"/>, meglio di me fece <anchor xml:id="l7a3"/>Plutone<anchor xml:id="l7a4"/>,
            </l>
            <l xml:id="l8">
                che·<anchor xml:id="l8a1"/>lla<anchor xml:id="l8a2"/> rapì: ma iʼ <anchor xml:id="l8a3"/>stettʼ in<anchor xml:id="l8a4"/> prigione.
            </l>
        </lg>
      </body>
