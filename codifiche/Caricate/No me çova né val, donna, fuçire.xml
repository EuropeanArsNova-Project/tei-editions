      <body>
        <lg>
            <l xml:id="l1">
		      <anchor xml:id="l1a1"/>No<anchor xml:id="l1a2"/> me <anchor xml:id="l1a3"/>çova<anchor xml:id="l1a4"/> né val, donna, <anchor xml:id="l1a5"/>fuçire<anchor xml:id="l1a6"/>,
	        </l>
            <l xml:id="l2">
		      che quando <anchor xml:id="l2a1"/>fuço<anchor xml:id="l2a2"/>, allor me par morire.
	        </l>
        </lg>
        <lg>
            <l xml:id="l3">
		      Credea, <anchor xml:id="l3a3"/>madonna<anchor xml:id="l3a4"/>, per <anchor xml:id="l3a1"/>starvi<anchor xml:id="l3a2"/> lontano,
	        </l>
            <l xml:id="l4">
		      donar <anchor xml:id="l4a1"/>riposo<anchor xml:id="l4a2"/> <anchor xml:id="l4a3"/>alquant’ al<anchor xml:id="l4a4"/> <anchor xml:id="l4a5"/>mie<anchor xml:id="l4a6"/> tormento,
	        </l>
            <l xml:id="l5" n="5">
              et tal <anchor xml:id="l5a1"/>pensier<anchor xml:id="l5a2"/> mi trovo <anchor xml:id="l5a3"/>falso et vano<anchor xml:id="l5a4"/>,
	        </l>
            <l xml:id="l6">
		      che <anchor xml:id="l6a1"/>con<anchor xml:id="l6a2"/> più fuço, <anchor xml:id="l6a3"/>magior<anchor xml:id="l6a4"/> pena sento.
	        </l>
            <l xml:id="l7">
		      Però non posso mai esser contento,
	        </l>
            <l xml:id="l8">
		      <anchor xml:id="l8a3"/>s’i’<anchor xml:id="l8a4"/> non ritorno a <anchor xml:id="l8a5"/>voi<anchor xml:id="l8a6"/>, <anchor xml:id="l8a1"/>car<anchor xml:id="l8a2"/> mio disire.
	        </l>
        </lg>
       </body>
