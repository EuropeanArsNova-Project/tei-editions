      <body>
         <lg>
            <l xml:id="l1">
                Facto m’à sdegno partir vie d’Amore,
            </l>
            <l xml:id="l2">
                sì che di servo son facto signore.
            </l>
        </lg>
        <lg>
            <l xml:id="l3">
                Chi <anchor xml:id="l3a1"/>porta<anchor xml:id="l3a2"/> <anchor xml:id="l3a3"/>fed’<anchor xml:id="l3a4"/> <anchor xml:id="l3a5"/>altru’<anchor xml:id="l3a6"/> oltra misura
            </l>
            <l xml:id="l4">
                ragion no·l move et senno  <anchor xml:id="l4a1"/>no·l <anchor xml:id="l4a2"/> conduce,
            </l>
            <l xml:id="l5" n="5">
                ch’i’  <anchor xml:id="l5a1"/>ti<anchor xml:id="l5a2"/> fu’ servo con la mente pura;	
            </l>
            <l xml:id="l6">
                tra ’ mie pensier tu fosti spechio et luce,
            </l>
            <l xml:id="l7">
                ora ò di sdegno scudo che riluce,
            </l>
            <l xml:id="l8">
                sì che <anchor xml:id="l8a1"/>invan<anchor xml:id="l8a2"/> tira chi saetta al core.
            </l>
         </lg>
      </body>
