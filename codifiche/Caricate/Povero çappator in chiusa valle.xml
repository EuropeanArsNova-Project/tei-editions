      <body>
         <lg>
            <l xml:id="l1">
                <anchor xml:id="l1a1"/>Povero çappator in chiusa  <anchor xml:id="l1a2"/>valle <anchor xml:id="l1a3"/>
            </l>
            <l xml:id="l2">
                son  <anchor xml:id="l2a1"/>aportato <anchor xml:id="l2a2"/> con diserto legno,
            </l>
            <l xml:id="l3">
                rocto dal mar al  <anchor xml:id="l3a2"/>qual datʼ ò <anchor xml:id="l3a3"/> le spalle. <anchor xml:id="l3a1"/>
            </l>
            <l xml:id="l4">
                Et  <anchor xml:id="l4a1"/>quel <anchor xml:id="l4a2"/> pianeto <anchor xml:id="l4a3"/>, chʼa fortunal segno
            </l>
            <l xml:id="l5" n="5">
                <anchor xml:id="l5a3"/>governa <anchor xml:id="l5a4"/> me, non  <anchor xml:id="l5a5"/>veggio <anchor xml:id="l5a1"/>cʼal so corso <anchor xml:id="l5a2"/>
            </l>
            <l xml:id="l6">
                pongʼ ancor fine per darmi soccorso.
            </l>
        </lg>
        <lg>
            <l xml:id="l7">
                <anchor xml:id="l7a1"/>Nellʼaspectar ognor mi manca <name type="senhal" rend="small-caps">LENA</name>
            </l>
            <l xml:id="l8">
                pascendo doglia et rinnovando pena. <anchor xml:id="l8a1"/>
            </l>
         </lg>
      </body>
