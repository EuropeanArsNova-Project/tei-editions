      <body>
        <lg>
            <l xml:id="l1">
		      <anchor xml:id="l1a1"/>Donna<anchor xml:id="l1a2"/> <anchor xml:id="l1a5"/>legiadra<anchor xml:id="l1a6"/>, <anchor xml:id="l1a3"/>di<anchor xml:id="l1a4"/> çafir vestita
	        </l>
            <l xml:id="l2">
		      et di cristal, sede <anchor xml:id="l2a1"/>sopr’ un<anchor xml:id="l2a2"/> diamante,
	        </l>
            <l xml:id="l3">
		      segno di pura <anchor xml:id="l3a1"/><supplied>[fé]</supplied><anchor xml:id="l3a2"/>, fort’ e constante.
	        </l>
            <l xml:id="l4">
		      Coperta di color di bel <anchor xml:id="l4a1"/>smiraldo<anchor xml:id="l4a2"/>
	        </l>
            <l xml:id="l5" n="5">
              era la testa, <anchor xml:id="l5a1"/>in<anchor xml:id="l5a2"/> segno d’onestate,
	        </l>
            <l xml:id="l6">
		      e ’l viso pien d’angelica <anchor xml:id="l6a1"/>biltate<anchor xml:id="l6a2"/>.
	        </l>
        </lg>
        <lg>
            <l xml:id="l7">
		      Al collo poi <anchor xml:id="l7a1"/>le<anchor xml:id="l7a2"/> vid’ un <anchor xml:id="l7a3"/>laccio<anchor xml:id="l7a4"/> d’oro,
	        </l>
            <l xml:id="l8">
		      tal che <anchor xml:id="l8a1"/>mi<anchor xml:id="l8a2"/> <anchor xml:id="l8a3"/>fa<anchor xml:id="l8a4"/> sperar, sì ch’<anchor xml:id="l8a5"/>i’<anchor xml:id="l8a6"/> non moro.
	        </l>
        </lg>
       </body>
