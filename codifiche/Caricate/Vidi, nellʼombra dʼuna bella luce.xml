      <body>
         <lg>
            <l xml:id="l1">
                <anchor xml:id="l1a1"/>Vidi, <anchor xml:id="l1a2"/>nellʼombra<anchor xml:id="l1a3"/> dʼuna <anchor xml:id="l1a4"/>bella<anchor xml:id="l1a5"/> luce,
            </l>
            <l xml:id="l2">
                Amor,<anchor xml:id="l2a2"/> che verso<anchor xml:id="l2a3"/> me forte spronava<anchor xml:id="l2a1"/>
            </l>
            <l xml:id="l3">
                <anchor xml:id="l3a1"/>gridandomi<anchor xml:id="l3a2"/>: «Staʼ <anchor xml:id="l3a4"/>fermʼ<anchor xml:id="l3a5"/>!», <anchor xml:id="l3a6"/>e<anchor xml:id="l3a7"/> io <anchor xml:id="l3a3"/>stava<anchor xml:id="l3a8"/>.
            </l>
            <l xml:id="l4">
                <anchor xml:id="l4a1"/>Giunto, <anchor xml:id="l4a2"/>el signore<anchor xml:id="l4a3"/> disse: «<anchor xml:id="l4a4"/>Noʼ<anchor xml:id="l4a5"/> vogliamo
            </l>
            <l xml:id="l5" n="5">
                che·ttu sia <anchor xml:id="l5a1"/>servo<anchor xml:id="l5a2"/> dʼesta bella <anchor xml:id="l5a3"/>cosa<anchor xml:id="l5a4"/>,
            </l>
            <l xml:id="l6">
                nel <anchor xml:id="l6a4"/>cui piacer ogni <anchor xml:id="l6a2"/>virtù<anchor xml:id="l6a3"/> si posa».<anchor xml:id="l6a1"/>
            </l>
        </lg>
        <lg>
            <l xml:id="l7">
                Allora <anchor xml:id="l7a1"/>me <anchor xml:id="l7a5"/>e llei<anchor xml:id="l7a2"/> per la<anchor xml:id="l7a3"/>man<anchor xml:id="l7a4"/> prese,
            </l>
            <l xml:id="l8">
                <anchor xml:id="l8a1"/>et <anchor xml:id="l8a7"/>fecel<anchor xml:id="l8a3"/>ʼ <anchor xml:id="l8a4"/>a mie vistʼ<anchor xml:id="l8a5"/> allor<anchor xml:id="l8a6"/> palese<anchor xml:id="l8a8"/>.<anchor xml:id="l8a2"/>
            </l>
        </lg>
