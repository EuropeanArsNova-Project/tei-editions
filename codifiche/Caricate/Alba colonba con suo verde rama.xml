        <lg>
            <l xml:id="l1">
		      Alba <anchor xml:id="l1a1"/>colonba<anchor xml:id="l1a2"/> con <anchor xml:id="l1a3"/>suo<anchor xml:id="l1a4"/> verde <anchor xml:id="l1a5"/>rama<anchor xml:id="l1a6"/>,
	        </l>
            <l xml:id="l2">
