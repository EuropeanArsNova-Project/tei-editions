	        </l>
            <l xml:id="l3">
		      «<anchor xml:id="l3a1"/>Pax, pax<anchor xml:id="l3a2"/>!» <anchor xml:id="l3a5"/>nuntiando<anchor xml:id="l3a6"/>, <anchor xml:id="l3a3"/>in<anchor xml:id="l3a4"/> su l’al’ è <anchor xml:id="l3a7"/>montata<anchor xml:id="l3a8"/>.
	        </l>
            <l xml:id="l4">
		      <anchor xml:id="l4a3"/>Posò<anchor xml:id="l4a4"/> <anchor xml:id="l4a5"/>suo<anchor xml:id="l4a6"/> <anchor xml:id="l4a7"/>volo<anchor xml:id="l4a8"/> <anchor xml:id="l4a1"/>suso in<anchor xml:id="l4a2"/> verde scoglio
	        </l>
            <l xml:id="l5" n="5">
              per <anchor xml:id="l5a5"/>riposarsi<anchor xml:id="l5a6"/>, <anchor xml:id="l5a1"/>et rimirando<anchor xml:id="l5a2"/> in <anchor xml:id="l5a3"/>giuso<anchor xml:id="l5a4"/>,
	        </l>
            <l xml:id="l6">
		      prese <anchor xml:id="l6a3"/>argomento<anchor xml:id="l6a4"/> <anchor xml:id="l6a1"/>di<anchor xml:id="l6a2"/> volar più suso,
	        </l>
        </lg>
        <lg>
            <l xml:id="l7">
		      perché <anchor xml:id="l7a1"/>gustava<anchor xml:id="l7a2"/> <anchor xml:id="l7a3"/>già<anchor xml:id="l7a4"/> i <anchor xml:id="l7a5"/>bon’<anchor xml:id="l7a6"/> <anchor xml:id="l7a7"/>odori<anchor xml:id="l7a8"/>
	        </l>
            <l xml:id="l8">
		      <anchor xml:id="l8a1"/>ch’<anchor xml:id="l8a9"/>eran<anchor xml:id="l8a10"/><anchor xml:id="l8a2"/> <anchor xml:id="l8a11"/>lassù<anchor xml:id="l8a12"/>, <anchor xml:id="l8a3"/>tra<anchor xml:id="l8a4"/> <anchor xml:id="l8a13"/>fronde<anchor xml:id="l8a14"/> <anchor xml:id="l8a15"/>ed<anchor xml:id="l8a16"/> <anchor xml:id="l8a5"/>altri<anchor xml:id="l8a6"/> <anchor xml:id="l8a7"/>fiori<anchor xml:id="l8a8"/>.
	        </l>
