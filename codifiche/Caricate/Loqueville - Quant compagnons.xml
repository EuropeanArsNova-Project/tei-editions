               Quant compaignons s’en vont jüer
            </l>
            <l xml:id="l2">
               cha et la en pluser païs,
            </l>
            <l xml:id="l3">
               il n’ont point toudis a·ssouper
            </l>
            <l xml:id="l4">
               cras connins ne capons rostis
            </l>
            <l xml:id="l5" n="5">
               fors le terme qu’il ont argent,
            </l>
            <l xml:id="l6">
               car ausi tost certainement
            </l>
            <l xml:id="l7">
               qu’uns compains pert d’argent le <anchor xml:id="l7a1"/>pois<anchor xml:id="l7a2"/>,
            </l>
            <l xml:id="l8">
               il fine assés petitement
            </l>
            <l xml:id="l9">
               <hi rend="italic">d’avoir deux ses apres ses p<supplied>[o]</supplied>is.</hi>
            </l>
         </lg>
