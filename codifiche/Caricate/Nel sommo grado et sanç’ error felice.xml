      <body>
        <lg>
            <l xml:id="l1">
		      Nel sommo grado et sanç’ error felice,
	        </l>
            <l xml:id="l2">
		      signor mai non ascende
	        </l>
            <l xml:id="l3">
		      che gustar non intende
	        </l>
            <l xml:id="l4">
		      di Liberalità l’alta radice,
	        </l>
        </lg>
        <lg>
            <l xml:id="l5" n="5">
              ma sol costei seguendo,
	        </l>
            <l xml:id="l6">
		      ne l’alto segio tien suo principato,
	        </l>
            <l xml:id="l7">
		      magnanimo faccendo
	        </l>
            <l xml:id="l8">
		     ciascun che merta, et mai non fia ingrato
	        </l>
            <l xml:id="l9">
		      al popol suo, benigno et sempre grato,
	        </l>
            <l xml:id="l10" n="10">
		      il cui disio sol brama.
	        </l>
            <l xml:id="l11">
		      Virtù con vera fama
	        </l>
            <l xml:id="l12">
		      leva la mente et solve ogni pendice.
	        </l>
        </lg>
       </body>
