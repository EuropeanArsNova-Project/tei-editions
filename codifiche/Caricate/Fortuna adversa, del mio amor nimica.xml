            <lg>
                <l xml:id="l1">Fortuna adversa, del mio <anchor xml:id="l1a1"/>amor<anchor xml:id="l1a2"/> <anchor xml:id="l1a3"/>nimica<anchor xml:id="l1a4"/>,</l>
                <l xml:id="l2">che <anchor xml:id="l2a1"/>posso<anchor xml:id="l2a2"/> più, che, <anchor xml:id="l2a3"/>dietro<anchor xml:id="l2a4"/> <anchor xml:id="l2a5"/>a<anchor xml:id="l2a6"/> lungo <anchor xml:id="l2a7"/>afanno<anchor xml:id="l2a8"/></l>
                <l xml:id="l3">sperando aver <anchor xml:id="l3a1"/>riposo<anchor xml:id="l3a2"/>, ò doppio danno?</l>
                <l xml:id="l4">Quando la vaga stella che <anchor xml:id="l4a1"/>mʼ<anchor xml:id="l4a2"/>accese</l>
                <l xml:id="l5" n="5"><anchor xml:id="l5a1"/>dʼ<anchor xml:id="l5a2"/><anchor xml:id="l5a3"/>oscuro<anchor xml:id="l5a4"/> <anchor xml:id="l5a5"/>mar<anchor xml:id="l5a6"/> <anchor xml:id="l5a7"/>mʼ<anchor xml:id="l5a8"/><anchor xml:id="l5a9"/>avea<anchor xml:id="l5a10"/> <anchor xml:id="l5a11"/>tratto<anchor xml:id="l5a12"/> e scorto</l>
                <l xml:id="l6">con una navicella presso <anchor xml:id="l6a3"/><anchor xml:id="l6a1"/>a<anchor xml:id="l6a2"/><anchor xml:id="l6a4"/> porto,</l>
            </lg>
            <lg>
                <l xml:id="l7">vento si volse e ʼn parte <anchor xml:id="l7a1"/>mʼà<anchor xml:id="l7a2"/> <anchor xml:id="l7a3"/>condotto<anchor xml:id="l7a4"/></l>
                <l xml:id="l8">chʼ<anchor xml:id="l8a3"/>iʼ<anchor xml:id="l8a4"/> son <anchor xml:id="l8a5"/>gittato<anchor xml:id="l8a6"/> <anchor xml:id="l8a7"/>a<anchor xml:id="l8a8"/> <anchor xml:id="l8a1"/>scogli<anchor xml:id="l8a2"/>, et ella à rotto.</l>                
            </lg>
