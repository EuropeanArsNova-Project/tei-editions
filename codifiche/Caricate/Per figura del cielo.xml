      <body>
        <lg>
            <l xml:id="l1">
		      Per figura del cielo,
	        </l>
            <l xml:id="l2">
		      questa spera mortal a <anchor xml:id="l2a1"/>nullo<anchor xml:id="l2a2"/> celo,
	        </l>
        </lg>
        <lg>
            <l xml:id="l3">
		      ma <anchor xml:id="l3a1"/>mostr’ a<anchor xml:id="l3a2"/> <anchor xml:id="l3a3"/>tutti<anchor xml:id="l3a4"/> el <anchor xml:id="l3a5"/>suo<anchor xml:id="l3a6"/> corso celeste,
	        </l>
            <l xml:id="l4">
		      con grande spoglie ed ora in picciol veste,
	        </l>
            <l xml:id="l5" n="5">
              et muta doglia in feste,
	        </l>
            <l xml:id="l6">
		     et così occulta a tutti el suo bel velo.
	        </l>
        </lg>
        <lg>
            <l xml:id="l7">
		      O voglia sì o voglia no, ciascuno
	        </l>
            <l xml:id="l8">
		      dee viver sì ched e’ possa quel muno
	        </l>
            <l xml:id="l9">
		      di laude che digiuno
	        </l>
            <l xml:id="l10" n="10">
		      non sia, ma abbia memoria sança velo.
	        </l>
        </lg>
       </body>
