      <body>
        <lg>
            <l xml:id="l1">
		        Sie <anchor xml:id="l1a1"/>mill’ e<anchor xml:id="l1a2"/> mille volte <anchor xml:id="l1a3"/>benedecta<anchor xml:id="l1a4"/>
	        </l>
            <l xml:id="l2">
		        quell’ alma che m’à l’anima <anchor xml:id="l2a1"/>costrecta<anchor xml:id="l2a2"/>.
	        </l>
        </lg>
        <lg>
            <l xml:id="l3">
		        Sie <anchor xml:id="l3a1"/>benedecto<anchor xml:id="l3a2"/> <anchor xml:id="l3a3"/>’l viso<anchor xml:id="l3a4"/>, che dipinto
	        </l>
            <l xml:id="l4">
		        porto sempre nel core;
	        </l>
            <l xml:id="l5" n="5">
		        <anchor xml:id="l5a1"/>i’<anchor xml:id="l5a2"/> benedico <anchor xml:id="l5a3"/>el loco<anchor xml:id="l5a4"/>, ov’ io fu’ vinto
	        </l>
            <l xml:id="l6">
		        dal mio <anchor xml:id="l6a1"/>dolçe<anchor xml:id="l6a2"/> signore;
	        </l>
            <l xml:id="l7">
		        <anchor xml:id="l7a1"/>i’<anchor xml:id="l7a2"/> benedico <anchor xml:id="l7a3"/>el<anchor xml:id="l7a4"/> tempo, el punto <anchor xml:id="l7a5"/>et l’ore<anchor xml:id="l7a6"/>
	        </l>
            <l xml:id="l8">
		        che giunto fu’ da sì dolce <anchor xml:id="l8a1"/>saetta<anchor xml:id="l8a2"/>. 
	        </l>
        </lg>
       </body>
