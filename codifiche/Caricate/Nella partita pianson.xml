      <body>
         <lg>
            <l xml:id="l1">
               Nella partita <anchor xml:id="l1a1"/>pianson<anchor xml:id="l1a2"/> gli <anchor xml:id="l1a3"/>ochi<anchor xml:id="l1a4"/> miei:
            </l>
            <l xml:id="l2">
               piangon <anchor xml:id="l2a1"/>et<anchor xml:id="l2a2"/> pianger voglion finché ’l <anchor xml:id="l2a3"/>core<anchor xml:id="l2a4"/>
            </l>
            <l xml:id="l3">
               nella tornata <anchor xml:id="l3a1"/>lascerà ’l<anchor xml:id="l3a2"/> dolore.
            </l> 
         </lg>
         <lg>    
            <l xml:id="l4">
               Nell’alma <anchor xml:id="l4a1"/>mie<anchor xml:id="l4a2"/> <anchor xml:id="l4a3"/>diletto<anchor xml:id="l4a4"/> <anchor xml:id="l4a5"/>truovo<anchor xml:id="l4a6"/> <anchor xml:id="l4a7"/>allora<anchor xml:id="l4a8"/>,
            </l>
            <l xml:id="l5" n="5">
               ch’i’ guato gli <anchor xml:id="l5a3"/>ochi<anchor xml:id="l5a4"/> <anchor xml:id="l5a1"/>vaghi e ’nnamorati<anchor xml:id="l5a2"/>,
            </l>
            <l xml:id="l6">
               <anchor xml:id="l6a1"/>e<anchor xml:id="l6a2"/> sempre spanderò lagrime fora,
            </l>
            <l xml:id="l7">
               finch’ i’ gli rivedrò lieti tornati.
            </l>
            <l xml:id="l8">
               <anchor xml:id="l8a1"/>Ei<anchor xml:id="l8a2"/> <anchor xml:id="l8a3"/>son<anchor xml:id="l8a4"/> d’ogni biltà <anchor xml:id="l8a5"/>sì<anchor xml:id="l8a6"/> adornati
            </l>
            <l xml:id="l9">
               che chi gli guata <anchor xml:id="l9a3"/>e<anchor xml:id="l9a4"/> non <anchor xml:id="l9a1"/>ne prende<anchor xml:id="l9a2"/> amore
            </l>
            <l xml:id="l10" n="10">
               quel si può dir che·<anchor xml:id="l10a1"/>ssia<anchor xml:id="l10a2"/> sança valore.
            </l>
         </lg>
      </body>
      
