      <body>
         <lg>
            <l xml:id="l1">
                Nel meço a <anchor xml:id="l1a3"/>sei <anchor xml:id="l1a4"/>pagon <anchor xml:id="l1a1"/>ne <anchor xml:id="l1a2"/>vidi<anchor xml:id="l1a5"/> un bianco
            </l>
            <l xml:id="l2">
                con cresta d’oro <anchor xml:id="l2a3"/>e<anchor xml:id="l2a4"/> <anchor xml:id="l2a1"/>con<anchor xml:id="l2a2"/> <anchor xml:id="l2a5"/>morbida <anchor xml:id="l2a6"/>penna<anchor xml:id="l2a7"/>,
            </l>
            <l xml:id="l3">
                <anchor xml:id="l3a1"/>sì<anchor xml:id="l3a2"/> bel che dolçemente ’l cor mi <anchor xml:id="l3a3"/>spenna<anchor xml:id="l3a4"/>.
            </l>
            <l xml:id="l4">
                E <anchor xml:id="l4a1"/>quanto <anchor xml:id="l4a2"/>più mostrava sua belleça<anchor xml:id="l4a3"/>,
            </l>
            <l xml:id="l5" n="5">
                onor <anchor xml:id="l5a1"/>facea<anchor xml:id="l5a2"/> ciascun d’altro <anchor xml:id="l5a3"/>colore<anchor xml:id="l5a4"/>
            </l>
            <l xml:id="l6">
                per la legiadra vista <anchor xml:id="l6a1"/>ch’à<anchor xml:id="l6a2"/> d’amore.
            </l>
            <l xml:id="l7">
                <anchor xml:id="l7a1"/>E ’l <anchor xml:id="l7a2"/>suo<anchor xml:id="l7a6"/> compagno <anchor xml:id="l7a3"/>pur <anchor xml:id="l7a4"/>lo va guardando<anchor xml:id="l7a5"/>
            </l>
            <l xml:id="l8">
                <anchor xml:id="l8a1"/>sempre <anchor xml:id="l8a2"/>cantando <anchor xml:id="l8a3"/>e<anchor xml:id="l8a4"/> da·llui non si <anchor xml:id="l8a6"/>parte<anchor xml:id="l8a5"/>,
            </l>
            <l xml:id="l9">
                <anchor xml:id="l9a1"/>ed e’ da·ssé lo fa partir<anchor xml:id="l9a2"/> per arte.
            </l>
        </lg>
        <lg>
            <l xml:id="l10">
                <anchor xml:id="l10a6"/>Perché <anchor xml:id="l10a5"/>glie <anchor xml:id="l10a1"/>spiace<anchor xml:id="l10a2"/> ’l suo <anchor xml:id="l10a3"/>noioso<anchor xml:id="l10a4"/> canto,<anchor xml:id="l10a7"/>
            </l>
            <l xml:id="l11">
                <anchor xml:id="l11a3"/>poi<anchor xml:id="l11a4"/> di biltate <anchor xml:id="l11a1"/>s’en fa<anchor xml:id="l11a2"/> rota e manto.
            </l>
        </lg>
      </body>
