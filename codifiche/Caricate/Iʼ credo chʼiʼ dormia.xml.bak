      <body>
         <lg>
            <l xml:id="l1">
                Iʼ credo chʼiʼ <anchor xml:id="l1a1"/>dormia<anchor xml:id="l1a2"/>, <anchor xml:id="l1a3"/>o a·mme<anchor xml:id="l1a4"/> parve,
            </l>
            <l xml:id="l2">
                quando la dea dʼAmor vidi venire
            </l>
            <l xml:id="l3">
                nellʼ<anchor xml:id="l3a1"/>atto<anchor xml:id="l3a2"/> che <anchor xml:id="l3a3"/>pietà<anchor xml:id="l3a4"/> fa duol sentire.
            </l>
            <l xml:id="l4">
                <supplied reason="illegible">[...]</supplied>
            </l>
            <l xml:id="l5" n="5">
                <supplied reason="illegible">[...]</supplied>
            </l>
            <l xml:id="l6">
                <supplied reason="illegible">[...]</supplied>
            </l>
        </lg>
        <lg>
            <l xml:id="l7">
                <anchor xml:id="l7a1"/>Rimango<anchor xml:id="l7a2"/>, <anchor xml:id="l7a3"/>in<anchor xml:id="l7a4"/> sogno, <anchor xml:id="l7a5"/>pensando<anchor xml:id="l7a6"/> pensoso
            </l>
            <l xml:id="l8">
                ed alla donna suo <anchor xml:id="l8a1"/>servʼ<anchor xml:id="l8a2"/> amoroso.
            </l>
         </lg>
