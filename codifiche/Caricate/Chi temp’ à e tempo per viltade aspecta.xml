                    <lg>
                        <l xml:id="l1">
		                    Chi <anchor xml:id="l1a1"/>temp’ à <anchor xml:id="l1a3"/>e<anchor xml:id="l1a4"/> tempo per viltade<anchor xml:id="l1a2"/> <anchor xml:id="l1a1"/>aspecta<anchor xml:id="l1a1"/>,
	                    </l>
                        <l xml:id="l2">
		                    <anchor xml:id="l2a1"/>se<anchor xml:id="l2a2"/> <anchor xml:id="l2a3"/>quel el perde<anchor xml:id="l2a4"/>, <anchor xml:id="l2a5"/>no·l<anchor xml:id="l2a6"/> <anchor xml:id="l2a7"/>raquista<anchor xml:id="l2a8"/> <anchor xml:id="l2a9"/>in<anchor xml:id="l2a10"/> <anchor xml:id="l2a11"/>fretta<anchor xml:id="l2a12"/>.
	                    </l>
                    </lg>
                    <lg>
                        <l xml:id="l3">
		                    Però chi dé far <anchor xml:id="l3a1"/>façça<anchor xml:id="l3a2"/>,
	                    </l>
                        <l xml:id="l4">
		                    <anchor xml:id="l4a1"/>perch’ al<anchor xml:id="l4a2"/> ben far non <anchor xml:id="l4a3"/>richede<anchor xml:id="l4a4"/> dimora,
	                    </l>
                        <l xml:id="l5" n="5">
                            e gran tempo se caçça   
	                    </l>
                        <l xml:id="l6">
                            quel che fortuna concede in un’ora. 
	                    </l>
                        <l xml:id="l7">
		                    Finché ventura <anchor xml:id="l7a1"/>vol<anchor xml:id="l7a2"/>, <anchor xml:id="l7a3"/>donqua<anchor xml:id="l7a4"/>, lavora,
	                    </l>
                        <l xml:id="l8">
		                    ché ’l tempo <anchor xml:id="l8a1"/>vola<anchor xml:id="l8a2"/> quanto una <anchor xml:id="l8a3"/>saietta<anchor xml:id="l8a4"/>.
	                    </l>
                    </lg>
