      <body>
        <lg>
            <l xml:id="l1">
		        <anchor xml:id="l1a1"/>Madonna<anchor xml:id="l1a2"/>, bench’ <anchor xml:id="l1a3"/>i’<anchor xml:id="l1a4"/> miri in altra parte,
	        </l>
            <l xml:id="l2">
		        Amor da <anchor xml:id="l2a3"/>voi<anchor xml:id="l2a4"/> però mie cor non <anchor xml:id="l2a1"/>parte<anchor xml:id="l2a2"/>.
	        </l>
        </lg>
        <lg>
            <l xml:id="l3">
		        El <anchor xml:id="l3a1"/>non si può già<anchor xml:id="l3a2"/> mai partir, <anchor xml:id="l3a3"/>mie<anchor xml:id="l3a4"/> core,
	        </l>
            <l xml:id="l4">
		        da la vostra <anchor xml:id="l4a1"/><supplied>[alta]</supplied><anchor xml:id="l4a2"/> <anchor xml:id="l4a5"/><anchor xml:id="l4a3"/>et<anchor xml:id="l4a4"/> nobil<anchor xml:id="l4a6"/> signoria,
	        </l>
            <l xml:id="l5" n="5">
                <anchor xml:id="l5a1"/>onde<anchor xml:id="l5a2"/> d’ogni biltà singular fiore   
	        </l>
            <l xml:id="l6">
                <anchor xml:id="l6a1"/>in voi si trova, virtù et legiadria<anchor xml:id="l6a2"/>. 
	        </l>
            <l xml:id="l7">
		        Sola in <anchor xml:id="l7a3"/>voi<anchor xml:id="l7a4"/> <anchor xml:id="l7a1"/>poso<anchor xml:id="l7a2"/> la sperança mia
	        </l>
            <l xml:id="l8">
		        sì ch’ogn’ altro piacer da <anchor xml:id="l8a1"/>me diparte<anchor xml:id="l8a2"/>.
	        </l>
        </lg>
        <lg>
            <l xml:id="l9">
		        <anchor xml:id="l9a1"/>Dunque da voi si muova ogni sospetto<anchor xml:id="l9a2"/>,
	        </l>
            <l xml:id="l10">
		        tenendomi per servo com’ <anchor xml:id="l10a1"/>e’<anchor xml:id="l10a2"/> sono,
	        </l>
            <l xml:id="l11">
		        ch’Amor <anchor xml:id="l11a1"/>di voi<anchor xml:id="l11a2"/> <anchor xml:id="l11a3"/>sì<anchor xml:id="l11a4"/> m’à fatto <anchor xml:id="l11a5"/>subgetto<anchor xml:id="l11a6"/>,
	        </l>
            <l xml:id="l12">
		        et d’ogni spirto mio v’à fatto dono:
	        </l>
            <l xml:id="l13">
		        però liberamente in voi dispono
	        </l>
            <l xml:id="l14">
		        el cor et l’alma, in tutto sanza parte.
	        </l>
        </lg>
