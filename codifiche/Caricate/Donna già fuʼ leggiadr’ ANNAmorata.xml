        <body>
            <lg>
                <l xml:id="l1">
                    Donna già <anchor xml:id="l1a3"/>fuʼ<anchor xml:id="l1a4"/> <anchor xml:id="l1a1"/>leggiadr’ <name type="senhal" rend="small-caps">anna</name>morata<anchor xml:id="l1a2"/>
                </l>
                <l xml:id="l2">
                    faccendʼ al servo <anchor xml:id="l2a1"/>mio<anchor xml:id="l2a2"/> <anchor xml:id="l2a3"/>dolce<anchor xml:id="l2a4"/> sembiante,
                </l>
                <l xml:id="l3">
                    or <anchor xml:id="l3a1"/>sono ʼn<anchor xml:id="l3a2"/> biscia orribil tramutata
                </l>
                <l xml:id="l4">
                    sol per uccider questo falso amante.
                </l>
                <l xml:id="l5" n="5">
                    Non so come ʼl suo cor <anchor xml:id="l5a1"/>mai<anchor xml:id="l5a2"/> lo <anchor xml:id="l5a3"/>sofferse<anchor xml:id="l5a4"/>
                </l>
                <l xml:id="l6">
                    <anchor xml:id="l6a3"/>cʼa<anchor xml:id="l6a4"/> dirmi villania <anchor xml:id="l6a1"/>se discoperse<anchor xml:id="l6a2"/>.
                </l>
            </lg>
            <lg>   
                <l xml:id="l7">
                    <anchor xml:id="l7a1"/>Comʼ io<anchor xml:id="l7a2"/> di tormentarlo <anchor xml:id="l7a3"/>sia ben<anchor xml:id="l7a4"/> saçia,
                </l>
                <l xml:id="l8">
                    tornerò donna <anchor xml:id="l8a1"/><supplied>[et]</supplied><anchor xml:id="l8a2"/> <anchor xml:id="l8a3"/>renderolli<anchor xml:id="l8a4"/> graçia.
                </l>
            </lg>
        </body>
