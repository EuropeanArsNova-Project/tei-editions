        <body>
            <lg>
                <l xml:id="l1">
                    Le greygnour bien, que nature
                </l>
                <l xml:id="l2">
                    fist a <anchor xml:id="l2a1"/>l’hume<anchor xml:id="l2a2"/> en ce folz monde,
                </l>
                <l xml:id="l3">
                    fu <anchor xml:id="l3a1"/><supplied>[c]</supplied>e<anchor xml:id="l3a2"/> dont, <anchor xml:id="l3a3"/>pris<supplied>[e]</supplied><anchor xml:id="l3a4"/> faconde,
                </l>
                <l xml:id="l4">
                    prist en ly sens et mensure.
                </l>    
                <l xml:id="l5" n="5">
                    E pourtant, quant unz n’a cure
                </l>
                <l xml:id="l6">
                    <anchor xml:id="l6a1"/><supplied>[d’]</supplied>asembler<anchor xml:id="l6a2"/> sciense parfonde,
                </l>
                <l xml:id="l7">
                    <anchor xml:id="l7a1"/>tretou<supplied>[s]</supplied><anchor xml:id="l7a2"/> cilz <anchor xml:id="l7a3"/>d<supplied>[e]</supplied><anchor xml:id="l7a4"/> pris enfonde;
                </l>
                <l xml:id="l8">
                    <anchor xml:id="l8a1"/>me<supplied>[s]</supplied><anchor xml:id="l8a2"/> j’en ai en cuer ardure.
                </l>
                <l xml:id="l9">
                    Mes il est grant <anchor xml:id="l9a1"/>esp<supplied>[e]</supplied>ranche<anchor xml:id="l9a2"/>,
                </l>
                <l xml:id="l10" n="10">
                    quant hom pans’, en sa fuméa,
                </l>
                <l xml:id="l11">
                    plus estre qu’en apparanche,
                </l>
                <l xml:id="l12">
                    onques d’avoir renoméa:
                </l>
                <l xml:id="l13">
                    <hi rend="italic">entres bons soit <anchor xml:id="l13a1"/>esperanche<anchor xml:id="l13a2"/></hi>
                </l>
                <l xml:id="l14">
                    <hi rend="italic">s’il <anchor xml:id="l14a1"/>nom<anchor xml:id="l14a2"/> prent a·ssoufisanche.</hi>
                </l>
            </lg>
