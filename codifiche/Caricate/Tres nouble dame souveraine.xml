      <body>
         <lg>
            <l xml:id="l1">
               <anchor xml:id="l1a1"/>Tres<anchor xml:id="l1a2"/> nouble dame souveraine,
            </l>
            <l xml:id="l2">
               je vous supli tres unblement:
            </l>
            <l xml:id="l3">
               prenés en gre tout en present
            </l>
            <l xml:id="l4">
               un petit don par bon estraine.
            </l>
         </lg>
         <lg>
            <l xml:id="l5" n="5">
               <anchor xml:id="l5a1"/>Une<anchor xml:id="l5a2"/> canson de <anchor xml:id="l5a3"/>v <supplied reason="illegible">[i]</supplied>r <supplied reason="illegible">[el]</supplied>ai<anchor xml:id="l5a4"/>,	
            </l>
            <l xml:id="l6">
               <anchor xml:id="l6a1"/>fait <supplied reason="illegible">[e]</supplied><anchor xml:id="l6a2"/> pour vous, belle honouree,
            </l>
            <l xml:id="l7">
               pour voustre amour <anchor xml:id="l7a1"/> <supplied reason="illegible">[je]</supplied><anchor xml:id="l7a2"/> canterai,
            </l>
            <l xml:id="l8">
               si vous supli qu’il vous agree,
            </l>
            <l xml:id="l9">
               car onques de nature humaine
            </l>
            <l xml:id="l10" n="10">
               amé ne fu certainement		
            </l>
            <l xml:id="l11">
               sans panser <anchor xml:id="l11a1"/>nul<anchor xml:id="l11a2"/> outragement
            </l>
            <l xml:id="l12">
               et amerai, soiés certaine!
            </l>
         </lg>
      </body>



