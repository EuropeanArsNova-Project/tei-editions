                <l xml:id="l5" n="5"><anchor xml:id="l5a1"/>Si<anchor xml:id="l5a2"/> <anchor xml:id="l5a5"/>doivent<anchor xml:id="l5a6"/> <anchor xml:id="l5a3"/>donc<anchor xml:id="l5a4"/> <anchor xml:id="l5a7"/>ceulz<anchor xml:id="l5a8"/> qui or sont en vie </l>
                <l xml:id="l6">leur scïence <anchor xml:id="l6a1"/>louer<anchor xml:id="l6a2"/> et <anchor xml:id="l6a3"/>lour<anchor xml:id="l6a4"/> <anchor xml:id="l6a5"/>mestrie<anchor xml:id="l6a6"/> </l>
                <l xml:id="l7"><anchor xml:id="l7a1"/>pour<anchor xml:id="l7a2"/> droit prouver que <anchor xml:id="l7a3"/>musique<anchor xml:id="l7a4"/> <anchor xml:id="l7a5"/>est<anchor xml:id="l7a6"/> fontayne</l>
                <l xml:id="l8"><hi rend="italic">de <anchor xml:id="l8a3"/>toute<anchor xml:id="l8a4"/> <anchor xml:id="l8a5"/>honnour<anchor xml:id="l8a6"/> et d’amour <anchor xml:id="l8a1"/>souverayne<anchor xml:id="l8a2"/>.</hi></l>
            </lg>
            <lg>
                <l xml:id="l9">Par musique ont esté cil congnëus</l>
                <l xml:id="l10" n="10">per tout lo monde, <anchor xml:id="l10a1"/>noble<anchor xml:id="l10a2"/> seignourie,</l>
                <l xml:id="l11">et <anchor xml:id="l11a1"/>son<supplied reason="illegible">[t]</supplied><anchor xml:id="l11a2"/> encor regreté et lëus </l>
                <l xml:id="l12">per plaisance de desir. En oublie</l>
                <l xml:id="l13"><anchor xml:id="l13a1"/>o<supplied reason="illegible">[r]</supplied><anchor xml:id="l13a2"/> en sont maint que je ne noumme <anchor xml:id="l13a3"/>mi<supplied reason="illegible">[e]</supplied><anchor xml:id="l13a4"/></l>
                <l xml:id="l14">affin qu’<anchor xml:id="l14a1"/>a<supplied reason="illegible">[u]</supplied>cun<anchor xml:id="l14a2"/> n’en puist <anchor xml:id="l14a3"/>gous<supplied reason="illegible">[t]</supplied>er<anchor xml:id="l14a4"/> envie</l>
                <l xml:id="l15" n="15">a qui sa flour puet estre aussi prouchaine</l>
                <l xml:id="l16">de toute honnour <supplied reason="illegible">[et d’amour souverayne]</supplied>.</l>
            </lg>
            
