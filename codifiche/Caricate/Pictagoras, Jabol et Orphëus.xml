            <lg>
                <l xml:id="l1"><anchor xml:id="l1a5"/><anchor xml:id="l1a1"/>Pictagoras<anchor xml:id="l1a2"/><anchor xml:id="l1a6"/>, <anchor xml:id="l1a7"/>Jabol<anchor xml:id="l1a8"/> <anchor xml:id="l1a3"/>et<anchor xml:id="l1a4"/> Orphëus</l>
