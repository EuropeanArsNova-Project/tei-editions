        <body>
            <lg>
                <l xml:id="l1">
                    Dame qui fust si tres bien assenee,
                </l>
                <l xml:id="l2">
                    come je suy a mon tamps, vrayement
                </l>
                <l xml:id="l3">
                    onques ne fu de nulle feme nee,
                </l>
                <l xml:id="l4">
                    qu’a droit sohayt je suy certainement.
                </l>
                <l xml:id="l5" n="5">
                    Mais Fortune ma partie
                </l>
                <l xml:id="l6">
                    soudainement a de mi departie,
                </l>
                <l xml:id="l7">
                    si m’est avis qu’, a droit considerer,
                </l>
                <l xml:id="l8">
                    <hi rend="italic">de Fortune me doy plaindre et loer.</hi>
                </l>
            </lg>
        </body>
