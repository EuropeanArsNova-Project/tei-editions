                </l>
                <l xml:id="l5" n="5">
                    Tout mon <anchor xml:id="l5a1"/>vouloir<anchor xml:id="l5a2"/> a rebours me <anchor xml:id="l5a3"/>sourvient<anchor xml:id="l5a4"/>,
                </l>
                <l xml:id="l6">
                    <anchor xml:id="l6a1"/>per la fausse<anchor xml:id="l6a2"/> <anchor xml:id="l6a3"/>que<anchor xml:id="l6a4"/> toudis <anchor xml:id="l6a5"/>mʼest<anchor xml:id="l6a6"/> contrayre.
                </l>
                <l xml:id="l7">
                    <hi rend="italic">Or <anchor xml:id="l7a7"/>pri<anchor xml:id="l7a8"/> a Dieu <anchor xml:id="l7a1"/>que<anchor xml:id="l7a2"/> <anchor xml:id="l7a3"/>puisse<anchor xml:id="l7a4"/> je <anchor xml:id="l7a5"/>retrayre<anchor xml:id="l7a6"/>.</hi>
                </l>
