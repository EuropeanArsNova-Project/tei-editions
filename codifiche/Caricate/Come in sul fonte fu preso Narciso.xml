                <body>
                    <lg>
                        <l xml:id="l1">
                            Come <anchor xml:id="l1a1"/>in sul <anchor xml:id="l1a2"/>fonte<anchor xml:id="l1a3"/> fu <anchor xml:id="l1a4"/>preso<anchor xml:id="l1a5"/> Narciso
                        </l>
                        <l xml:id="l2">
                            <anchor xml:id="l2a1"/>di sé da sé<anchor xml:id="l2a2"/>, così costei, <anchor xml:id="l2a3"/>spechiando<anchor xml:id="l2a4"/>
                        </l>
                        <l xml:id="l3">
                            sé, sé <anchor xml:id="l3a1"/>ha preso<anchor xml:id="l3a2"/> dolcemente amando.
                        </l>
                        <l xml:id="l4">
                            E tanto vaga se stessa vagheggia
                        </l>
                        <l xml:id="l5" n="5">
                            <anchor xml:id="l5a1"/>che<anchor xml:id="l5a2"/>, <anchor xml:id="l5a3"/>ingelosita<anchor xml:id="l5a4"/> della sua figura,	
                        </l>
                        <l xml:id="l6">
                            ha di <anchor xml:id="l6a1"/>chiunque<anchor xml:id="l6a2"/> la mira paura.
                        </l>
                        <l xml:id="l7">
                            Temendo sé a sé <anchor xml:id="l7a1"/>non <anchor xml:id="l7a2"/>esser<anchor xml:id="l7a3"/> tolta,
                        </l>
                        <l xml:id="l8">
                            <anchor xml:id="l8a1"/>quello <anchor xml:id="l8a2"/>chʼ<anchor xml:id="l8a3"/>ella di me pensi, colui
                        </l>
                        <l xml:id="l9">
                            <anchor xml:id="l9a1"/>se ʼl pensi<anchor xml:id="l9a2"/>, <anchor xml:id="l9a3"/>che<anchor xml:id="l9a4"/> in sé <anchor xml:id="l9a5"/>conosce<anchor xml:id="l9a6"/> altrui.
                        </l>
                    </lg>
                    <lg>
                        <l xml:id="l10" n="10">
                            <anchor xml:id="l10a1"/>A me ne <anchor xml:id="l10a3"/>par <anchor xml:id="l10a4"/>per quel chʼ<anchor xml:id="l10a5"/>appar <anchor xml:id="l10a6"/>di fore<anchor xml:id="l10a2"/>
                        </l>
                        <l xml:id="l11">
                            qual fu tra Febo <anchor xml:id="l11a1"/>e<anchor xml:id="l11a2"/> Dafne, <anchor xml:id="l11a3"/>odio ed amore<anchor xml:id="l11a4"/>.
                        </l>
                    </lg>
                </body>
