      <body>
        <lg>
            <l xml:id="l1">
		    <anchor xml:id="l1a1"/>Tra<anchor xml:id="l1a2"/> sperança et fortuna <anchor xml:id="l1a3"/>io<anchor xml:id="l1a4"/> pur m’agiro
	    </l>
            <l xml:id="l2">
		    et rimedio non trov’ al mie <anchor xml:id="l2a1"/>martiro<anchor xml:id="l2a2"/>.
	    </l>
        </lg>
        <lg>
            <l xml:id="l3">
		    Et quanto più mi sforço, <anchor xml:id="l3a1"/>più m’aretra<anchor xml:id="l3a2"/>
	    </l>
            <l xml:id="l4">
		    <anchor xml:id="l4a1"/>da sé<anchor xml:id="l4a2"/> quel volto che mi <anchor xml:id="l4a3"/>prese all’esca<anchor xml:id="l4a4"/>
	    </l>
            <l xml:id="l5" n="5">
		    di <anchor xml:id="l5a1"/>due begli<anchor xml:id="l5a2"/> ochi più duri che petra,
	    </l>
            <l xml:id="l6">
		    <anchor xml:id="l6a1"/>per che invano<anchor xml:id="l6a1"/> la mie lença pesca.
	    </l>
            <l xml:id="l7">
		    <anchor xml:id="l7a1"/>Ma io non<anchor xml:id="l7a2"/> finirò <anchor xml:id="l7a3"/>però<anchor xml:id="l7a4"/> la tresca
	    </l>
            <l xml:id="l8">
		    <anchor xml:id="l8a1"/>d’Amor<anchor xml:id="l8a2"/> seguire <anchor xml:id="l8a3"/>pel<anchor xml:id="l8a4"/> viso ch’i’ miro. 
	    </l>
        </lg>
       </body>
