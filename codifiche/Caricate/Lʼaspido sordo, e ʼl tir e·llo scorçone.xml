        <body>
            <lg>
                <l xml:id="l1">Lʼaspido sordo, e ʼl <anchor xml:id="l1a1"/>tir<anchor xml:id="l1a2"/> e·llo scorçone,</l>
                <l xml:id="l2">la talpa, la <anchor xml:id="l2a1"/>cicignʼ<anchor xml:id="l2a2"/> e ʼl badalischio</l>
                <l xml:id="l3">si <anchor xml:id="l3a1"/>trovan<anchor xml:id="l3a2"/> per le <anchor xml:id="l3a3"/>selve al<anchor xml:id="l3a4"/> suon del fischio. </l>
                <l xml:id="l4">O Febʼ, o <anchor xml:id="l4a1"/>ssuo<anchor xml:id="l4a2"/> sorella <anchor xml:id="l4a3"/>in<anchor xml:id="l4a4"/> iscorpione!</l>
                <l xml:id="l5" n="5"><anchor xml:id="l5a1"/>Presti la gratia <anchor xml:id="l5a3"/>in lor<anchor xml:id="l5a4"/> et lo <anchor xml:id="l5a5"/>sapere<anchor xml:id="l5a6"/>,<anchor xml:id="l5a2"/></l>
                <l xml:id="l6"><anchor xml:id="l6a3"/>sì che<anchor xml:id="l6a4"/> lor <anchor xml:id="l6a5"/>passïon<anchor xml:id="l6a6"/> <anchor xml:id="l6a1"/>faccia<anchor xml:id="l6a2"/> <anchor xml:id="l6a7"/>sentire<anchor xml:id="l6a8"/>.</l>
            </lg>
            <lg>
                <l xml:id="l7"><anchor xml:id="l7a3"/>Saturnʼ<anchor xml:id="l7a4"/> e Marte <anchor xml:id="l7a1"/>diene<anchor xml:id="l7a2"/> lor la força,</l>
                <l xml:id="l8"><anchor xml:id="l8a1"/>sì chi<anchor xml:id="l8a2"/> è <anchor xml:id="l8a3"/>morso<anchor xml:id="l8a4"/> <anchor xml:id="l8a5"/>passi<anchor xml:id="l8a6"/> <anchor xml:id="l8a7"/>e<anchor xml:id="l8a8"/> <anchor xml:id="l8a9"/>getti<anchor xml:id="l8a10"/> scorça.</l>                
            </lg>

        </body>



