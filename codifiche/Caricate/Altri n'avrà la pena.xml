         <lg>
            <l xml:id="l1">
               Altri n’<anchor xml:id="l1a3"/>avrà<anchor xml:id="l1a4"/> la <anchor xml:id="l1a1"/>pena, et<anchor xml:id="l1a2"/> io il danno,
            </l>
            <l xml:id="l2">
               se <anchor xml:id="l2a1"/>sotto<anchor xml:id="l2a2"/> <anchor xml:id="l2a3"/>fede<anchor xml:id="l2a4"/> ò ricevuto inganno.
            </l>
         </lg>
         <lg>
            <l xml:id="l3">
               Non manca <anchor xml:id="l3a1"/>mai<anchor xml:id="l3a2"/> la divina <anchor xml:id="l3a3"/>vendetta<anchor xml:id="l3a4"/>
            </l>      
            <l xml:id="l4">
               ben <anchor xml:id="l4a1"/>c’alcun’ ora<anchor xml:id="l4a2"/> paia che <anchor xml:id="l4a3"/>rispiarmi<anchor xml:id="l4a4"/>;
            </l>
            <l xml:id="l5" n="5">
               ond’ io spero venir giusta <anchor xml:id="l5a1"/>saetta<anchor xml:id="l5a2"/>
            </l>
            <l xml:id="l6">
               inverso chi à creduto saettarmi,
            </l>
            <l xml:id="l7">
               <anchor xml:id="l7a3"/>e<anchor xml:id="l7a4"/> di ciò <anchor xml:id="l7a1"/>che m’è fatto<anchor xml:id="l7a2"/> non curarmi,
            </l>
            <l xml:id="l8">
               ché <anchor xml:id="l8a1"/>gran<anchor xml:id="l8a2"/> virtù è vincer ogni affanno.
            </l>
         </lg>
