        <body>
            <lg>
                <l xml:id="l1">
                    D’anguiseus cuer doy gemir
                </l>
                <l xml:id="l2">
                    et larmes de <anchor xml:id="l2a1"/>san<supplied>[g]</supplied><anchor xml:id="l2a2"/> plorer,
                </l>
                <l xml:id="l3">
                    quant de ma dame partir
                </l>
                <l xml:id="l4">
                    me convient et desevrer.
                </l>
                <l xml:id="l5" n="5">
                    Helas, coment puet soufrir
                </l>
                <l xml:id="l6">
                    cuers humains qui ainsi art!
                </l>
                <l xml:id="l7">
                    Trop miex <anchor xml:id="l7a1"/>seroi<supplied>[t]</supplied><anchor xml:id="l7a2"/> de morir,
                </l>
                <l xml:id="l8">
                    car bien say que, de ma part,
                </l>
                <l xml:id="l9">
                    <hi rend="italic"><anchor xml:id="l9a1"/>dame<anchor xml:id="l9a2"/>, le cuer me part.</hi>
                </l>
            </lg>
        </body>
