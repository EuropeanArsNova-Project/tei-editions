            <lg>
                <l xml:id="l1"><anchor xml:id="l1a1"/>Iʼ fui già usignuolo<anchor xml:id="l1a2"/> in tempo verde</l>
                <l xml:id="l2"><anchor xml:id="l2a1"/>e con<anchor xml:id="l2a2"/> dolce <anchor xml:id="l2a3"/>cantar<anchor xml:id="l2a4"/> <anchor xml:id="l2a5"/>seguiʼ<anchor xml:id="l2a6"/> <anchor xml:id="l2a9"/><anchor xml:id="l2a7"/>Amor<anchor xml:id="l2a8"/><anchor xml:id="l2a10"/> tanto</l>
                <l xml:id="l3"><anchor xml:id="l3a1"/>chʼiʼ<anchor xml:id="l3a2"/> giunsi <anchor xml:id="l3a3"/>ove in<anchor xml:id="l3a4"/> <anchor xml:id="l3a5"/>fischiar<anchor xml:id="l3a6"/> si <anchor xml:id="l3a7"/>muta<anchor xml:id="l3a8"/> <anchor xml:id="l3a9"/>il<anchor xml:id="l3a10"/> canto.</l>
                <l xml:id="l4">Così mutai, per <anchor xml:id="l4a1"/>accidente<anchor xml:id="l4a2"/>, verso:</l>
                <l xml:id="l5" n="5">or viver cerco <anchor xml:id="l5a1"/>e<anchor xml:id="l5a2"/> non curo fatica </l>
                <l xml:id="l6">per non <anchor xml:id="l6a1"/>ire<anchor xml:id="l6a2"/> a merçé della formica.</l>
            </lg>
            <lg>
                <l xml:id="l7"><anchor xml:id="l7a3"/>Chi<anchor xml:id="l7a4"/> <anchor xml:id="l7a5"/>vuol<anchor xml:id="l7a6"/> <anchor xml:id="l7a7"/>sença<anchor xml:id="l7a8"/> <anchor xml:id="l7a1"/>fallir<anchor xml:id="l7a2"/> venire in tempo,</l>
                <l xml:id="l8">le cose <anchor xml:id="l8a3"/><anchor xml:id="l8a1"/>dé<anchor xml:id="l8a2"/> lʼuon far<anchor xml:id="l8a4"/> <anchor xml:id="l8a5"/>sicondo il<anchor xml:id="l8a6"/> tempo. </l>                
            </lg>
        </body>



