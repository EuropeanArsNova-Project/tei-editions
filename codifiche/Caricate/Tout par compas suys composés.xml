            <lg>
                <l xml:id="l1"> Tout par compas suys composés</l>
                <l xml:id="l2"> en ceste rode proprement</l>
                <l xml:id="l3"> pour moy chanter plus seurement.</l>
            </lg>
            <lg>
                <l xml:id="l4"> Regarde com suys disposés,</l>
                <l xml:id="l5" n="5"> compaing, je te pri chierement;</l>
                <l xml:id="l6"> <hi rend="italic">tout par compas suys composés</hi></l>
                <l xml:id="l7"> <hi rend="italic"> en ceste rode proprement.</hi></l>
                <l xml:id="l8"> Trois temps entiers par toy posés</l>
                <l xml:id="l9"> chacer me pues joyeusement,</l>
                <l xml:id="l10" n="10"> s’en chantant as vray sentement:</l>
                <l xml:id="l11"> <hi rend="italic">tout par compas suys composés</hi></l>
                <l xml:id="l12"> <hi rend="italic">en ceste rode proprement</hi></l>
