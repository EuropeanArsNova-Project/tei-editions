        <body>
            <lg>
                <l xml:id="l1">Come da <anchor xml:id="l1a1"/>lupo<anchor xml:id="l1a2"/> pecorella presa</l>
                <l xml:id="l2"><anchor xml:id="l2a1"/>ispande<anchor xml:id="l2a2"/> <anchor xml:id="l2a5"/>il «bè»<anchor xml:id="l2a6"/> <anchor xml:id="l2a3"/>in<anchor xml:id="l2a4"/> voce di dolore</l>
                <l xml:id="l3"><anchor xml:id="l3a1"/>perchʼ<anchor xml:id="l3a2"/> <anchor xml:id="l3a3"/>allo<anchor xml:id="l3a4"/> scampo suo <anchor xml:id="l3a5"/>tragga il<anchor xml:id="l3a6"/> pastore,</l>
                <l xml:id="l4">simil <anchor xml:id="l4a1"/>piatà<anchor xml:id="l4a2"/> dʼuna chʼiʼ <anchor xml:id="l4a3"/>presa avea<anchor xml:id="l4a4"/>,</l>
                <l xml:id="l5" n="5">la <anchor xml:id="l5a1"/>quale<anchor xml:id="l5a2"/> <anchor xml:id="l5a3"/>«omè»<anchor xml:id="l5a4"/> dicea con alti guai, </l>
                <l xml:id="l6">mi fé <anchor xml:id="l6a1"/>lasciarla<anchor xml:id="l6a2"/>, <anchor xml:id="l6a3"/>ondʼ io<anchor xml:id="l6a4"/> non <anchor xml:id="l6a5"/>poso<anchor xml:id="l6a6"/> mai.</l>
            </lg>
            <lg>
                <l xml:id="l7">E <anchor xml:id="l7a1"/>quel<anchor xml:id="l7a2"/> che di tal <anchor xml:id="l7a3"/>fatto<anchor xml:id="l7a4"/> più mi scorna </l>
                <l xml:id="l8">è chʼio <anchor xml:id="l8a1"/><anchor xml:id="l8a5"/>raspetto<anchor xml:id="l8a6"/><anchor xml:id="l8a2"/> <anchor xml:id="l8a3"/>il<anchor xml:id="l8a4"/> caso e <anchor xml:id="l8a7"/>queʼ<anchor xml:id="l8a8"/> non torna. </l>                
            </lg>
        </body>



