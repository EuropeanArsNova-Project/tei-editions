        <body>
            <lg>
                <l xml:id="l1">
                    De <anchor xml:id="l1a1"/>tous<anchor xml:id="l1a2"/> les moys que sunt en la sayson,
                </l>
                <l xml:id="l2">
                    je <anchor xml:id="l2a1"/><supplied>[t]</supplied>iens<anchor xml:id="l2a2"/> <anchor xml:id="l2a3"/>av<supplied>[r]</supplied>i<supplied>[l]</supplied><anchor xml:id="l2a4"/> pour le <anchor xml:id="l2a5"/>plu<supplied>[x]</supplied><anchor xml:id="l2a6"/> <anchor xml:id="l2a7"/>gratï<supplied>[e]</supplied>ux<anchor xml:id="l2a8"/>,
                </l>
                <l xml:id="l3">
                    et <anchor xml:id="l3a1"/><supplied>[j]</supplied>e<anchor xml:id="l3a2"/> suy prest de prover per raison
                </l>
                <l xml:id="l4">
                    qu’il est de l’an li tres <anchor xml:id="l4a1"/>plu<supplied>[x]</supplied><anchor xml:id="l4a2"/> amoureux.
                </l>
                <l xml:id="l5" n="5">
                    Iver s’en voy, li tristes <anchor xml:id="l5a1"/>doler<supplied>[eux]</supplied><anchor xml:id="l5a2"/>, 
                </l>
                <l xml:id="l6">
                    qui a tenus <anchor xml:id="l6a1"/>mo<supplied>[n]</supplied><anchor xml:id="l6a2"/> cuer en <anchor xml:id="l6a3"/><supplied>[sa prison]</supplied><anchor xml:id="l6a4"/>.
                </l>
                <l xml:id="l7">
                    <anchor xml:id="l7a1"/>Eté <supplied>[revi]</supplied>ent<anchor xml:id="l7a2"/>, qui est <anchor xml:id="l7a3"/>delicïeu<supplied>[x]</supplied><anchor xml:id="l7a4"/>: 
                </l>
                <l xml:id="l8">
                    <hi rend="italic">jugiés <anchor xml:id="l8a1"/>an <supplied>[vous]</supplied><anchor xml:id="l8a2"/> se je dis voyr ou non.</hi>
                </l>
            </lg>
