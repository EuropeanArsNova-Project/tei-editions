      <body>
         <lg>
            <l xml:id="l1">
                <anchor xml:id="l1a1"/>I’<anchor xml:id="l1a2"/> mi<anchor xml:id="l1a3"/> son<anchor xml:id="l1a4"/> un <anchor xml:id="l1a5"/>che per <anchor xml:id="l1a6"/>le<anchor xml:id="l1a7"/> frasc’ andando<anchor xml:id="l1a8"/>
            </l>
            <l xml:id="l2">
                vo pur cercando     <anchor xml:id="l2a3"/>e’<anchor xml:id="l2a4"/> dilettosi <anchor xml:id="l2a1"/>fiori<anchor xml:id="l2a2"/>,
            </l>
            <l xml:id="l3">
                <anchor xml:id="l3a1"/>per far<anchor xml:id="l3a2"/> ghirlandʼ a·<anchor xml:id="l3a4"/>mme<anchor xml:id="l3a5"/> di<anchor xml:id="l3a6"/> novi<anchor xml:id="l3a7"/> odori.
            </l>
            <l xml:id="l4">
                <anchor xml:id="l4a1"/>Dellʼ<anchor xml:id="l4a2"/>altrui fronde mai non <anchor xml:id="l4a3"/>cheço<anchor xml:id="l4a4"/> lʼombra,
            </l>
            <l xml:id="l5" n="5">
                ançi mʼingombra     <anchor xml:id="l5a1"/>lʼaltrui penser<anchor xml:id="l5a2"/> vile<anchor xml:id="l5a3"/>,
            </l>
            <l xml:id="l6">
                che veste sua viltà <anchor xml:id="l6a1"/>de lʼaltrui<anchor xml:id="l6a2"/> stile<anchor xml:id="l6a3"/>.
            </l>
        </lg>
        <lg>
            <l xml:id="l7">
                <anchor xml:id="l7a3"/>Così <anchor xml:id="l7a1"/>sʼaquista<anchor xml:id="l7a2"/> la fronde <anchor xml:id="l7a4"/>gradita<anchor xml:id="l7a5"/>
            </l>
            <l xml:id="l8">
                <anchor xml:id="l8a1"/>dellʼ<anchor xml:id="l8a2"/>arbor<anchor xml:id="l8a3"/> verde che non teme <anchor xml:id="l8a4"/>sita<anchor xml:id="l8a5"/>.
            </l>
        </lg>
        <lg>
            <l xml:id="l9">
                <anchor xml:id="l9a1"/>Corvo<anchor xml:id="l9a2"/>, che <anchor xml:id="l9a3"/>di<anchor xml:id="l9a4"/> paon veste la penna,
            </l>
            <l xml:id="l10" n="10">
                fraʼ papagalʼ <anchor xml:id="l10a1"/>con<anchor xml:id="l10a2"/> vergogna <anchor xml:id="l10a3"/>si<anchor xml:id="l10a4"/> spenna.
            </l>
        </lg>
