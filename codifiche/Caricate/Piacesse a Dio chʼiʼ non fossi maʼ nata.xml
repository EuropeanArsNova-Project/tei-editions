        <body>
            <lg>
                <l xml:id="l1">
                    <anchor xml:id="l1a1"/>Piacesse<anchor xml:id="l1a2"/> a Dio <anchor xml:id="l1a3"/>chʼiʼ non fossi<anchor xml:id="l1a4"/> <anchor xml:id="l1a5"/>maʼ<anchor xml:id="l1a6"/> nata,
                </l>
                <l xml:id="l2">
                    o lassa dolorosa! 
                </l>
                <l xml:id="l3">
                    Fresca son più che rosa,
                </l>
                <l xml:id="l4">
                    et <anchor xml:id="l4a3"/>vegiom’<anchor xml:id="l4a4"/> <anchor xml:id="l4a1"/>a<anchor xml:id="l4a2"/> un vechio maritata!  
                </l>
            </lg>
            <lg>
                <l xml:id="l5" n="5">
                    <anchor xml:id="l5a3"/>Omè<anchor xml:id="l5a4"/> <anchor xml:id="l5a1"/>dolente<anchor xml:id="l5a2"/>, son <anchor xml:id="l5a5"/>vagʼe gioconda<anchor xml:id="l5a6"/>
                </l>
                <l xml:id="l6">
                    et dʼAmor sento <anchor xml:id="l6a1"/>suo<anchor xml:id="l6a2"/> dolçe <anchor xml:id="l6a3"/>saetta<anchor xml:id="l6a4"/>,
                </l>
                <l xml:id="l7">
                    guardando <anchor xml:id="l7a1"/>nello<anchor xml:id="l7a2"/> spechio bianca et bionda
                </l>
                <l xml:id="l8">
                    <anchor xml:id="l8a1"/>mi vegio<anchor xml:id="l8a2"/> <anchor xml:id="l8a3"/>tutta<anchor xml:id="l8a4"/> quanta amorosetta.
                </l>
                <l xml:id="l9">
                    <anchor xml:id="l9a1"/>Ondʼ<anchor xml:id="l9a2"/> io <anchor xml:id="l9a3"/>priego<anchor xml:id="l9a4"/> <anchor xml:id="l9a5"/>Iesù<anchor xml:id="l9a6"/> che gram <anchor xml:id="l9a7"/>vendetta<anchor xml:id="l9a8"/>
                </l>
                <l xml:id="l10" n="10">
                    <anchor xml:id="l10a1"/><anchor xml:id="l10a2"/>faccia<anchor xml:id="l10a3"/> di chi marito
                </l>
                <l xml:id="l11">
                    <anchor xml:id="l11a2"/>mi diè<anchor xml:id="l11a3"/>, chʼè già fiorito<anchor xml:id="l11a1"/>
                </l>
                <l xml:id="l12">
                    <anchor xml:id="l12a1"/>e la <anchor xml:id="l12a5"/>suo<anchor xml:id="l12a6"/> barba <anchor xml:id="l12a3"/>è<anchor xml:id="l12a4"/> bianca diventata.<anchor xml:id="l12a2"/>
                </l>
            </lg>
