               <lg>
                  <l xml:id="l1">Duol sì la vita et l’anima</l>
                  <l xml:id="l2">(ché donna non fu libera</l>
                  <l xml:id="l3">com’uom) ciò che, dilibera</l>           
                  <l xml:id="l4">d’Amor, <anchor xml:id="l4a1"/><supplied>[f]</supplied>aria<anchor xml:id="l4a2"/> magnanima.</l>
               </lg>
               <lg>
                  <l xml:id="l5" n="5">«<anchor xml:id="l5a1"/>Veggio uno a<anchor xml:id="l5a2"/> morte correre,</l>
                  <l xml:id="l6"><anchor xml:id="l6a1"/>ed<anchor xml:id="l6a2"/> io d’atarlo <anchor xml:id="l6a3"/>istruggomi<anchor xml:id="l6a4"/>,</l>
                  <l xml:id="l7"><anchor xml:id="l7a1"/>ma<anchor xml:id="l7a2"/> non l’oso soccorere,</l>
                  <l xml:id="l8">se da onor non <anchor xml:id="l8a1"/>fuggomi<anchor xml:id="l8a2"/>.</l>
                  <l xml:id="l9"><anchor xml:id="l9a1"/>Ond’io<anchor xml:id="l9a2"/> ora ben purgomi,</l>   
                  <l xml:id="l10" n="10">s’a Dio <anchor xml:id="l10a1"/>mai<anchor xml:id="l10a2"/> volli offendere,</l>
                  <l xml:id="l11">ch’Amor m’à fatto accendere</l>
                  <l xml:id="l12"><anchor xml:id="l12a1"/>e<anchor xml:id="l12a2"/> <anchor xml:id="l12a3"/>temor<anchor xml:id="l12a4"/> mi <anchor xml:id="l12a5"/>disanima<anchor xml:id="l12a6"/>.</l>
               </lg>
               <lg>
                  <l xml:id="l13">S’a·llui, amante, scusomi,</l>
                  <l xml:id="l14">di doglie non <anchor xml:id="l14a1"/>isciolgolo<anchor xml:id="l14a2"/>,</l>
                  <l xml:id="l15" n="15">ond’esser cagion cusomi,</l>
                  <l xml:id="l16">la qual da vita tolgolo.</l>
                  <l xml:id="l17">Ma ’l ver, se <anchor xml:id="l17a1"/>ben<supplied>[e]</supplied><anchor xml:id="l17a2"/> scorgolo,</l>   
                  <l xml:id="l18">giusto sarebbe atandolo:</l>
                  <l xml:id="l19">fie gran peccato et scandolo</l>
                  <l xml:id="l20" n="20">che da lui parta l’anima</l>
               </lg>
               <lg>
                  <l xml:id="l21">Sed io som di lui tenera</l>
                  <l xml:id="l22">a <anchor xml:id="l22a1"/>giustiti<supplied>[a]</supplied><anchor xml:id="l22a2"/>, memoria</l>
                  <l xml:id="l23">in lui tant’amor genera</l>
                  <l xml:id="l24">ch’è sua ogni mia gloria,</l>
                  <l xml:id="l25" n="25">e non brama vettoria</l>   
                  <l xml:id="l26">a·ssé, se non <anchor xml:id="l26a1"/>piace<supplied>[n]</supplied>domi<anchor xml:id="l26a2"/>;</l>
                  <l xml:id="l27">per che, legge togliendomi</l>
                  <l xml:id="l28">a·llui, forte m’<anchor xml:id="l28a1"/>innanima<anchor xml:id="l28a2"/>.</l>
               </lg>
               <lg>
                  <l xml:id="l29">Canzon, va e confortalo,</l>
                  <l xml:id="l30" n="30">quanto tu puoi considera,</l>
                  <l xml:id="l31">digli che nel cuor portalo</l>
                  <l xml:id="l32">la donna che·l disidera</l>
                  <l xml:id="l33">e di piacer assidera,</l>   
                  <l xml:id="l34">ma vergogna rafrenala,</l>
                  <l xml:id="l35" n="35">però ch’Amor non menala</l>
                  <l xml:id="l36">a·ffar ciò ch’ama l’<anchor xml:id="l36a1"/>anima<anchor xml:id="l36a2"/>».</l>
               </lg>
