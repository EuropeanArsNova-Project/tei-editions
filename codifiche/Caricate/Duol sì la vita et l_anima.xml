               <lg>
                  <l xml:id="sTl1">
                     Duol sì la vita e l’anima
                  </l>
                  <l xml:id="sTl2">
                     (ché donna non fu libera
                  </l>
                  <l xml:id="sTl3">
                     com’uom) ciò che, dilibera
                  </l>
                  <l xml:id="sTl4">
                     d’Amor, <anchor xml:id="sTl4a1"/><supplied>[f]</supplied>aria<anchor xml:id="sTl4a2"/> magnanima.
                  </l>
               </lg>
               <lg>
                  <l xml:id="sTl5" n="5">
                     «<anchor xml:id="sTl5a1"/>Vegio un a<anchor xml:id="sTl5a2"/>·mmorte correre,
                  </l>
                  <l xml:id="sTl6">
                     et io d’atarlo strugomi,
                  </l>
                  <l xml:id="sTl7">
                     e non l’oso soccorrere,
                  </l>
                  <l xml:id="sTl8">
                     se da onor non fugommi.
                  </l>
                  <l xml:id="sTl9">
                     Ond’ io ora ben purgomi,
                  </l>
                  <l xml:id="sTl10" n="10">
                     s’a Dio ma’ volli offendere,
                  </l>
                  <l xml:id="sTl11">
                     c’Amor m’à fatto accendere
                  </l>
                  <l xml:id="sTl12">
                     e ’l timor mi dissanima».
                  </l>
               </lg>
