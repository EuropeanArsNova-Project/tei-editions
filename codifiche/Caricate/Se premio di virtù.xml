         <lg>
            <l xml:id="l1">
                Se premio <anchor xml:id="l1a3"/>de <anchor xml:id="l1a4"/>virtut’<anchor xml:id="l1a5"/> è <anchor xml:id="l1a1"/>sol’<anchor xml:id="l1a2"/> onore,
            </l>
            <l xml:id="l2">
                molt’ è fallace <anchor xml:id="l2a1"/>de çascun<anchor xml:id="l2a2"/> la brama
            </l>
            <l xml:id="l3">
                che <anchor xml:id="l3a1"/>sença<anchor xml:id="l3a2"/> lei <anchor xml:id="l3a3"/>se<anchor xml:id="l3a4"/> crede aquistar fama,
            </l>
            <l xml:id="l4">
                <anchor xml:id="l4a1"/>unde ala<anchor xml:id="l4a2"/> vista et al parer attende,
            </l>
            <l xml:id="l5" n="5">
                voltando sempre, <anchor xml:id="l5a1"/>col<anchor xml:id="l5a2"/> disio fervente,	
            </l>
            <l xml:id="l6">
                <anchor xml:id="l6a1"/>dal<anchor xml:id="l6a2"/>’eser proprio la <anchor xml:id="l6a3"/>volubel<anchor xml:id="l6a4"/> mente.
            </l>
            <l xml:id="l7">
                <anchor xml:id="l7a1"/>Ma se<anchor xml:id="l7a2"/> pur gloria al mondo è <anchor xml:id="l7a3"/>digna<anchor xml:id="l7a4"/> laude,
            </l>
            <l xml:id="l8">
                <anchor xml:id="l8a1"/>cerca<anchor xml:id="l8a2"/> ’l disio nel’<anchor xml:id="l8a3"/>umano <anchor xml:id="l8a4"/>intelletto<anchor xml:id="l8a5"/>,
            </l>
            <l xml:id="l9">
                <anchor xml:id="l9a1"/>vertute <anchor xml:id="l9a2"/>aquista <anchor xml:id="l9a3"/>e <anchor xml:id="l9a4"/>çonçevi <anchor xml:id="l9a5"/>l’<anchor xml:id="l9a6"/>efetto.
            </l>
        </lg>
        <lg>
            <l xml:id="l10" n="10">
                Sich’ <anchor xml:id="l10a1"/>ela è<anchor xml:id="l10a2"/> priva <anchor xml:id="l10a5"/>e for<anchor xml:id="l10a6"/> d’ogni <anchor xml:id="l10a3"/>sïentia<anchor xml:id="l10a4"/>, 
            </l>
            <l xml:id="l11">
                seguendo l’ombra <anchor xml:id="l11a3"/>e<anchor xml:id="l11a4"/> non la vera <anchor xml:id="l11a1"/>esençia<anchor xml:id="l11a2"/>,
            </l>
        </lg>
        <lg>
            <l xml:id="l12">
                <anchor xml:id="l12a1"/>perché lei è lo fruto, e la radice<anchor xml:id="l12a2"/>
            </l>
             <l xml:id="l13">
                <anchor xml:id="l13a1"/>di cotal sper’ è con piacer <anchor xml:id="l13a3"/>fellice<anchor xml:id="l13a4"/>.<anchor xml:id="l13a2"/>
            </l>
         </lg>
