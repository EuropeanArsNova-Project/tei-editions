      <body>
         <lg>
            <l xml:id="l1">
                Sempre <anchor xml:id="l1a1"/>se<anchor xml:id="l1a2"/> trova in alta donna Amore,
            </l>
        </lg>
        <lg>
            <l xml:id="l2">
                né <anchor xml:id="l2a1"/>fo<anchor xml:id="l2a2"/> senza virtute né mai fia,
            </l>
            <l xml:id="l3">
                <anchor xml:id="l3a1"/>tanto è<anchor xml:id="l3a2"/> so gran poter <anchor xml:id="l3a3"/>e<anchor xml:id="l3a4"/> cortesia,
            </l>
            <l xml:id="l4">
                <anchor xml:id="l4a1"/>che <anchor xml:id="l4a3"/>merta<anchor xml:id="l4a4"/> ogn’ om che li serve de core.<anchor xml:id="l4a2"/>
            </l>
        </lg>
        <lg>
            <l xml:id="l5" n="5">
                <anchor xml:id="l5a1"/>Perch’ el se vede en ti quel ch’ora io canto<anchor xml:id="l5a2"/>,
            </l>
            <l xml:id="l6">
                <anchor xml:id="l6a5"/>madona<anchor xml:id="l6a6"/>, io <anchor xml:id="l6a1"/>deo<anchor xml:id="l6a2"/> sperar <anchor xml:id="l6a7"/>e<anchor xml:id="l6a8"/> spero <anchor xml:id="l6a3"/>el manto<anchor xml:id="l6a4"/>
            </l>
            <l xml:id="l7">
                che vest’ <anchor xml:id="l7a1"/>e<anchor xml:id="l7a2"/> copre ogni <anchor xml:id="l7a3"/>bon servitore<anchor xml:id="l7a4"/>.
            </l>
         </lg>
      </body>
