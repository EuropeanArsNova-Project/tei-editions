         <lg>
            <l xml:id="l1">
               Donna, s’i’ t’ò fallito,
            </l>
            <l xml:id="l2">
               od altr’ amor che ’l tuo seguir consento,
            </l>
            <l xml:id="l3">
               son di morir pelle <anchor xml:id="l3a1"/>tuo<anchor xml:id="l3a2"/> ma<anchor xml:id="l3a3"/>n conte<anchor xml:id="l3a4"/>nto.
            </l> 
         </lg>
         <lg>                 
            <l xml:id="l4">
               Ma s’i’ <anchor xml:id="l4a1"/>ti porto<anchor xml:id="l4a2"/> ed ò portato fede
            </l>
            <l xml:id="l5" n="5">
               e senpre <anchor xml:id="l5a1"/>’l<anchor xml:id="l5a2"/> tuo <anchor xml:id="l5a3"/>volere<anchor xml:id="l5a4"/>
            </l>
            <l xml:id="l6">
               seguito più che ’l <anchor xml:id="l6a1"/>mio<anchor xml:id="l6a2"/>, come tu sai,
            </l>
            <l xml:id="l7">
               perch’ a diletto <anchor xml:id="l7a1"/>ognor mi fa’<anchor xml:id="l7a2"/> dolere
            </l>
            <l xml:id="l8">
               <anchor xml:id="l8a1"/>veggendo<anchor xml:id="l8a2"/> tuo merçede
            </l>
            <l xml:id="l9">
               <anchor xml:id="l9a1"/>mancar<anchor xml:id="l9a2"/> nel viso <anchor xml:id="l9a3"/>bel<anchor xml:id="l9a4"/> che tolto m’ài?
            </l>
            <l xml:id="l10" n="10">
               <anchor xml:id="l10a1"/>Vuo’ tu<anchor xml:id="l10a2"/>, <anchor xml:id="l10a3"/>perch’ io t’amai<anchor xml:id="l10a4"/>
            </l>
            <l xml:id="l11">
               e tanto t’amo ch’altro ben non sento,
            </l>
            <l xml:id="l12">
               <anchor xml:id="l12a1"/>tener<anchor xml:id="l12a2"/> la vita mia <anchor xml:id="l12a3"/>in<anchor xml:id="l12a4"/> tal tormento?
            </l>
         </lg>
