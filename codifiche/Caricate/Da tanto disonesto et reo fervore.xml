         <lg>
            <l xml:id="l1">
                Da tanto disonesto et reo fervore
            </l>
            <l xml:id="l2">
                <anchor xml:id="l2a1"/>fermo son di partire,<anchor xml:id="l2a2"/>
            </l>
            <l xml:id="l3">
                <anchor xml:id="l3a1"/>ché non può più sofrire<anchor xml:id="l3a2"/>
            </l>
            <l xml:id="l4">
                <anchor xml:id="l4a1"/>l’anima, et stare<anchor xml:id="l4a2"/> in te, <anchor xml:id="l4a3"/>lascivo<anchor xml:id="l4a4"/> <anchor xml:id="l4a5"/>amore<anchor xml:id="l4a6"/>.
            </l>
         </lg>
         <lg>
            <l xml:id="l5" n="5">
                <anchor xml:id="l5a1"/>E’ mi ricorda a’ rischi, che·tt’amai,<anchor xml:id="l5a2"/>
            </l>
            <l xml:id="l6">
                menato, <anchor xml:id="l6a1"/>e a’ casi<anchor xml:id="l6a2"/>, et gli angosciosi <anchor xml:id="l6a3"/>affanni<anchor xml:id="l6a4"/>
            </l>
            <l xml:id="l7">
                <supplied reason="illegible">[...]</supplied>
            </l>
            <l xml:id="l8">
               <supplied reason="illegible">[...]</supplied>
            </l>
            <l xml:id="l9">
               <supplied reason="illegible">[...]</supplied>
            </l>
            <l xml:id="l10" n="10">
               <supplied reason="illegible">[...]</supplied>
            </l>
            <l xml:id="l11">
               <supplied reason="illegible">[...]</supplied> granda fanmi,
            </l>
            <l xml:id="l12">
                né·sso veder come me ne <anchor xml:id="l12a1"/>canpa<supplied reason="illegible">[re]</supplied><anchor xml:id="l12a2"/>.
            </l>
         </lg>
