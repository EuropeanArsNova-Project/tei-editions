        <body>
            <lg>
                <l xml:id="l1">
                    De  <anchor xml:id="l1a1"/>sotto <anchor xml:id="l1a2"/> ’l verde vidi  <anchor xml:id="l1a3"/>gli <anchor xml:id="l1a4"/> ochi vaghi,
                </l>
                <l xml:id="l2">
                    <anchor xml:id="l2a1"/>che mi<anchor xml:id="l2a2"/>, <anchor xml:id="l2a3"/>s[u]o<anchor xml:id="l2a4"/> servo,  <anchor xml:id="l2a5"/>con <anchor xml:id="l2a6"/> <anchor xml:id="l2a7"/>disio<anchor xml:id="l2a8"/> mirava,
                </l>
                <l xml:id="l3">
                    sì che  <anchor xml:id="l3a3"/>di <anchor xml:id="l3a4"/> <anchor xml:id="l3a1"/>loro<anchor xml:id="l3a2"/> più  <anchor xml:id="l3a5"/>m’inamorava <anchor xml:id="l3a6"/>.
                </l>
                <l xml:id="l4">
                    E pur conven che·lla mia vista bassi,
                </l>
                <l xml:id="l5" n="5">
                    quando ver  <anchor xml:id="l5a5"/>me <anchor xml:id="l5a6"/> <anchor xml:id="l5a1"/>si move<anchor xml:id="l5a2"/> la <anchor xml:id="l5a3"/>lor<anchor xml:id="l5a4"/>  <anchor xml:id="l5a7"/>luce <anchor xml:id="l5a8"/>.
                </l>
                <l xml:id="l6">
                    <anchor xml:id="l6a1"/>Per quel disio ch’a·llor mirar m’induce<anchor xml:id="l6a2"/>,
                </l>
            </lg>
            <lg>    
                <l xml:id="l7">
                    <anchor xml:id="l7a1"/>com’ uom che bramo d’esser tuo con fede<anchor xml:id="l7a2"/>,
                </l>
                <l xml:id="l8">
                    vivo suggett’ e chiamoti merçede.
                </l>
            </lg>
        </body>
