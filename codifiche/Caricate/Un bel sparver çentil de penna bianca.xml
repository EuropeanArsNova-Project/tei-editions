                <l xml:id="l7"> <anchor xml:id="l7a1"/>Sisi del monte tuto el çorno intiero,</l>
                <l xml:id="l8">l’andai chiamando in fin a meça <anchor xml:id="l8a1"/>notte<anchor xml:id="l8a2"/>,</l>
                <l xml:id="l9">poi me colcai in meço <supplied reason="illegible"><anchor xml:id="l9a2"/>[de]<anchor xml:id="l9a3"/></supplied> due grotte.<anchor xml:id="l9a1"/></l>
            </lg>
            <lg>
                <l xml:id="l10" n="10"><anchor xml:id="l10a3"/>Allʼalba<anchor xml:id="l10a4"/>, <anchor xml:id="l10a1"/><anchor xml:id="l10a5"/>el<anchor xml:id="l10a6"/><anchor xml:id="l10a2"/> <anchor xml:id="l10a7"/>çorno<anchor xml:id="l10a8"/> <anchor xml:id="l10a9"/>aparvʼ<anchor xml:id="l10a10"/> ed io tornava,</l>
                <l xml:id="l11"> et <anchor xml:id="l11a1"/><anchor xml:id="l11a3"/>quello<anchor xml:id="l11a2"/> ʼn<anchor xml:id="l11a4"/> pugno <anchor xml:id="l11a5"/>alora<anchor xml:id="l11a6"/> <anchor xml:id="l11a7"/>me<anchor xml:id="l11a8"/> volava.</l>
            </lg>

