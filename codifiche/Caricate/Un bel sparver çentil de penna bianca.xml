                <l xml:id="l3"> <anchor xml:id="l3a1"/>in un<anchor xml:id="l3a2"/> bel prato verde pien de fronde.</l>
                <l xml:id="l4"> <anchor xml:id="l4a1"/>Amor, <anchor xml:id="l4a2"/>che<anchor xml:id="l4a3"/> <anchor xml:id="l4a4"/>de<anchor xml:id="l4a5"/> servir <anchor xml:id="l4a6"/><anchor xml:id="l4a8"/>mai<anchor xml:id="l4a9"/><anchor xml:id="l4a7"/> non sʼasconde,</l>
                <l xml:id="l5" n="5"> <anchor xml:id="l5a5"/>me<anchor xml:id="l5a6"/> <anchor xml:id="l5a1"/>disse<anchor xml:id="l5a2"/>: «Vaʼ seguendo <anchor xml:id="l5a3"/>quel<anchor xml:id="l5a4"/> <anchor xml:id="l5a7"/>sparviero<anchor xml:id="l5a8"/>,</l>
