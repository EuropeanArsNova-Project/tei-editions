      <body>
         <lg>
            <l xml:id="l1">
                <anchor xml:id="l1a1"/>Girand’ un bel falcon<anchor xml:id="l1a2"/> gentil e bianco
            </l>
            <l xml:id="l2">
                <anchor xml:id="l2a5"/>per<anchor xml:id="l2a6"/> l’ari’, <anchor xml:id="l2a1"/>al mie<anchor xml:id="l2a2"/> <anchor xml:id="l2a3"/>chiamar<anchor xml:id="l2a4"/> lento s’artenne
            </l>
            <l xml:id="l3">
                <anchor xml:id="l3a3"/>et<anchor xml:id="l3a4"/> com’ <anchor xml:id="l3a5"/>uman’<anchor xml:id="l3a6"/> in pugno mi <anchor xml:id="l3a1"/>rivenne<anchor xml:id="l3a2"/>.
            </l>
            <l xml:id="l4">
                <anchor xml:id="l4a3"/>Con meco<anchor xml:id="l4a4"/> stecte <anchor xml:id="l4a1"/>infin<anchor xml:id="l4a2"/> che venne manco
            </l>
            <l xml:id="l5" n="5">
                <anchor xml:id="l5a1"/>la sperança del<anchor xml:id="l5a2"/> frutto<anchor xml:id="l5a3"/>, et <anchor xml:id="l5a4"/>con lo ’ngegno<anchor xml:id="l5a5"/>
            </l>
            <l xml:id="l6">
                <anchor xml:id="l6a1"/>mancò la fede<anchor xml:id="l6a2"/>, simulando <anchor xml:id="l6a3"/>sdegno<anchor xml:id="l6a4"/>.
            </l>
        </lg>
        <lg>
            <l xml:id="l7">
                Diventò corbo poi fellon’ e fero,
            </l>
            <l xml:id="l8">
                «<anchor xml:id="l8a1"/>Cro cro<anchor xml:id="l8a2"/>» <anchor xml:id="l8a3"/>grachiando et<anchor xml:id="l8a4"/> non dicendo vero.
            </l>
         </lg>
