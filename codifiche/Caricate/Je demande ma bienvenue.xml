            <lg>
                <l xml:id="l1">Je demande ma bienvenue:</l>
                <l xml:id="l2">«ill a longtemps que ne vous vi:</l>
                <l xml:id="l3">dites, sui je plus vostre ami?</l>
                <l xml:id="l4">Avés bien vostre foy tenue?</l>
                <l xml:id="l5" n="5">La meilleür desoubs la nue </l>
                <l xml:id="l6"><anchor xml:id="l6a1"/>este<supplied reason="illegible">[s]</supplied><anchor xml:id="l6a2"/> se l’avés fait ainsi».</l>
                <l xml:id="l7"><hi rend="italic">Je demand<supplied xml:id="suppl1" reason="illegible">[e ma bienvenue:</supplied></hi></l>
                <l xml:id="l8"><hi rend="italic"><supplied xml:id="suppl2" corresp="#suppl1" reason="illegible">«ill a longtemps que ne vous vi],</supplied></hi></l>
                <l xml:id="l9">je vous ay moult long temps perdue,</l>
                <l xml:id="l10" n="10">dont j’ai esté en grant soussi;</l>
                <l xml:id="l11">mais de tous mes maulx sui <anchor xml:id="l11a1"/><supplied reason="illegible">[gari]</supplied><anchor xml:id="l11a2"/>,</l>
                <l xml:id="l12">puis qu’en bon point <anchor xml:id="l12a1"/>vous<anchor xml:id="l12a2"/> ay vëue».</l>
                <l xml:id="l13"><hi rend="italic"> Je demand <supplied xml:id="suppl3" reason="illegible">[e: «ma bienvenue,</supplied></hi></l>
                <l xml:id="l14"><hi rend="italic"><supplied xml:id="suppl4" corresp="#suppl3" reason="illegible">ill a longtemps que ne vous vi:</supplied></hi></l>
                <l xml:id="l15" n="15"><hi rend="italic"><supplied xml:id="suppl5" corresp="#suppl3" reason="illegible">dites, sui je plus vostre ami? </supplied></hi></l>
