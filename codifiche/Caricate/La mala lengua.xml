         <lg>
            <l xml:id="l1">
               La mala <anchor xml:id="l1a5"/>lengua<anchor xml:id="l1a6"/> <anchor xml:id="l1a1"/>è<anchor xml:id="l1a2"/> d’ogni <anchor xml:id="l1a3"/>mal<anchor xml:id="l1a4"/> radice,
            </l>
            <l xml:id="l2">
               ben che <anchor xml:id="l2a1"/>’l<anchor xml:id="l2a2"/> mal torni <anchor xml:id="l2a3"/>spesso<anchor xml:id="l2a4"/> a chi mal dice.
            </l>
         </lg>
         <lg>   
            <l xml:id="l3">
               Però è <anchor xml:id="l3a1"/>bel<anchor xml:id="l3a2"/> <anchor xml:id="l3a3"/>çascun<anchor xml:id="l3a4"/> <anchor xml:id="l3a5"/>chiuder<anchor xml:id="l3a6"/> la <anchor xml:id="l3a7"/>boca<anchor xml:id="l3a8"/>,
            </l> 
            <l xml:id="l4">
               cercando <anchor xml:id="l4a1"/>inprima<anchor xml:id="l4a2"/> <anchor xml:id="l4a3"/>i<anchor xml:id="l4a4"/> <anchor xml:id="l4a5"/>suoi<anchor xml:id="l4a6"/> che gli <anchor xml:id="l4a7"/>altru’<anchor xml:id="l4a8"/> danpni,
            </l>
            <l xml:id="l5" n="5">
               ché <anchor xml:id="l5a1"/>chi<anchor xml:id="l5a2"/>, <anchor xml:id="l5a3"/>biasmando<anchor xml:id="l5a4"/> altrui, <anchor xml:id="l5a7"/>quel<anchor xml:id="l5a8"/> <anchor xml:id="l5a5"/>ch’à<anchor xml:id="l5a6"/> <anchor xml:id="l5a9"/>lui<anchor xml:id="l5a10"/> <anchor xml:id="l5a11"/>toca<anchor xml:id="l5a12"/>,
            </l>
            <l xml:id="l6">
               <anchor xml:id="l6a5"/>conven<anchor xml:id="l6a6"/> che per <anchor xml:id="l6a1"/>sé<anchor xml:id="l6a2"/> <anchor xml:id="l6a7"/>steso<anchor xml:id="l6a8"/> <anchor xml:id="l6a3"/>si<anchor xml:id="l6a4"/> condanpni.
            </l>
            <l xml:id="l7">
               <anchor xml:id="l7a5"/>E<anchor xml:id="l7a6"/> tal <anchor xml:id="l7a7"/>soto<anchor xml:id="l7a8"/> <anchor xml:id="l7a1"/>color<anchor xml:id="l7a2"/> <anchor xml:id="l7a9"/>de<anchor xml:id="l7a10"/> <anchor xml:id="l7a3"/>bene a<anchor xml:id="l7a4"/> <anchor xml:id="l7a11"/>ingani<anchor xml:id="l7a12"/>
            </l>
            <l xml:id="l8">
               <anchor xml:id="l8a1"/>parla<anchor xml:id="l8a2"/>, che più <anchor xml:id="l8a3"/>tacer<anchor xml:id="l8a4"/> <anchor xml:id="l8a5"/>seria<anchor xml:id="l8a6"/> felice.
            </l>
         </lg>
         <lg>
            <l xml:id="l9">
               Pensa çascun che de invidia se <anchor xml:id="l9a1"/>mov<supplied>[a]</supplied><anchor xml:id="l9a2"/>
            </l>
            <l xml:id="l10" n="10">
               l’animo aceso del mal dir d’altrui:
            </l>
            <l xml:id="l11">
               viltà porta nel core e çò fa <anchor xml:id="l11a1"/>pruova<anchor xml:id="l11a2"/>
            </l>
