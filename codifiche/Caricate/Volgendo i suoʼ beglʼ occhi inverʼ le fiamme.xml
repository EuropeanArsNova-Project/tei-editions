                <l xml:id="l6">col più bel riso che <anchor xml:id="l6a1"/>maʼ<anchor xml:id="l6a2"/> viso porse.</l>
            </lg>
            <lg>
                <l xml:id="l7"><anchor xml:id="l7a1"/>Maʼ<anchor xml:id="l7a2"/> non mi <anchor xml:id="l7a3"/>piacquon<anchor xml:id="l7a4"/> serpi altro <anchor xml:id="l7a5"/>chʼ<anchor xml:id="l7a6"/><anchor xml:id="l7a7"/>alora<anchor xml:id="l7a8"/>,</l>
