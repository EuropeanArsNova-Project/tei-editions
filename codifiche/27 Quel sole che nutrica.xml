      <body>
         <lg>
            <l xml:id="l1">
                Quel sole che nutrica ’l gentil fiore
            </l>
            <l xml:id="l2">
                discende talor giù per veder quello
            </l>
            <l xml:id="l3">
                ch’a·llui di lui par <anchor xml:id="l3a1"/>esser<supplied reason="illegible">[e]</supplied><anchor xml:id="l3a2"/> più bello.
            </l>
            <l xml:id="l4">
                Poi <anchor xml:id="l4a1"/>ch<supplied reason="illegible">[e]</supplied><anchor xml:id="l4a2"/> alquanto seco à contemplato,
            </l>
            <l xml:id="l5" n="5">
                ritorna su et riferisce alli dei
            </l>
            <l xml:id="l6">
                la mirabil belleça di costei.
            </l>
        </lg>
        <lg>
            <l xml:id="l7">
                <anchor xml:id="l7a1"/>Or<anchor xml:id="l7a2"/> sol in alto<anchor xml:id="l7a3"/> ciel di tuo biltate
            </l>
            <l xml:id="l8">
                <anchor xml:id="l8a1"/>laudan<anchor xml:id="l8a2"/> gli angioli la somm’ onestate.
            </l>
         </lg>
      </body>
