        <body>
            <lg>
                <l xml:id="l1"> Se j’estoye aseuree</l>
                <l xml:id="l2"> que tant que j’avray duree</l>
                <l xml:id="l3"> je demourai vostre amie,</l>
                <l xml:id="l4"> ne me jugeroy ge mie</l>
                <l xml:id="l5" n="5"> sur toutes bien ëuree?</l>
           </lg>
           <lg>
                <l xml:id="l6"> Certainement si feroie,</l>
                <l xml:id="l7"> n’autre bien je ne voudroye</l>
                <l xml:id="l8"> en ce monde desirer,</l>
                <l xml:id="l9">que vous, qui estes la voye</l>
                <l xml:id="l10" n="10"> de tenir mon cuer en joye</l>
                <l xml:id="l11"> ou de le faire <anchor xml:id="l11a1"/>emp<supplied reason="illegible">[ire]</supplied>r<anchor xml:id="l11a2"/>;</l>
                <l xml:id="l12"> car vo bonne rennomee</l>
                <l xml:id="l13"> devers mon cuer enfermee</l>
                <l xml:id="l14"> a vous amer si me lie</l>
                <l xml:id="l15" n="15"> qu’<anchor xml:id="l15a1"/>on<supplied reason="illegible">[c]</supplied><anchor xml:id="l15a2"/> amoureuse si lïe</l>
                <l xml:id="l16"> ne fu en ce monde nee.</l>
            </lg>
            
