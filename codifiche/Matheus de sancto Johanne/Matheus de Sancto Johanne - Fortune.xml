      <body>
         <lg>
            <l xml:id="l1">
               Fortune <anchor xml:id="l1a1"/>faulce<anchor xml:id="l1a2"/>, <anchor xml:id="l1a3"/>parverse<anchor xml:id="l1a4"/>,
            </l>
            <l xml:id="l2">
               versé m’as en grant martire!  
            </l>
            <l xml:id="l3">
               <anchor xml:id="l3a1"/>Taire<anchor xml:id="l3a2"/> si m’est trop adverse,  
            </l>
            <l xml:id="l4">
               <hi rend="italic">fortune faulce, perverse,</hi>   
            </l>
            <l xml:id="l5" n="5">
               tu me fiers a <anchor xml:id="l5a1"/>la<anchor xml:id="l5a2"/> traverse,
            </l>
            <l xml:id="l6">
               <anchor xml:id="l6a1"/>traversement<anchor xml:id="l6a2"/>, si puis dire:
            </l>
            <l xml:id="l7">
               <hi rend="italic">
                  Fortune, fause, perverse,
               </hi>               
            </l>
            <l xml:id="l8">
               <hi rend="italic">
                  versé m’as en grant martire!
               </hi>               
            </l>
         </lg>
