      <body>
        <lg>
            <l xml:id="l1">
		      Se non ti piaque <anchor xml:id="l1a3"/><anchor xml:id="l1a1"/>in<anchor xml:id="l1a2"/> ingrat’ abitare<anchor xml:id="l1a4"/>,
	        </l>
            <l xml:id="l2">
		      ’nanç’ al <anchor xml:id="l2a1"/>crear<anchor xml:id="l2a2"/> del mondo <anchor xml:id="l2a3"/>i<anchor xml:id="l2a4"/> qua’ <anchor xml:id="l2a5"/>dannasti<anchor xml:id="l2a6"/>,
	        </l>
            <l xml:id="l3">
		      <anchor xml:id="l3a3"/>Idio giusto, <anchor xml:id="l3a1"/>non basti<anchor xml:id="l3a2"/><anchor xml:id="l3a4"/>:
	        </l>
            <l xml:id="l4">
		      <anchor xml:id="l4a1"/>qua vegiam buon’ <anchor xml:id="l4a3"/>lor<anchor xml:id="l4a4"/> <anchor xml:id="l4a5"/>colpi<anchor xml:id="l4a6"/> <anchor xml:id="l4a7"/>sterminare<anchor xml:id="l4a8"/><anchor xml:id="l4a2"/>.
	        </l>
            <l xml:id="l5" n="5">
            <anchor xml:id="l5a1"/>Mundissimo<anchor xml:id="l5a2"/>, se sdegni <anchor xml:id="l5a3"/>e’ maculati<anchor xml:id="l5a4"/>
	        </l>
            <l xml:id="l6">
		      <anchor xml:id="l6a1"/>carmi<anchor xml:id="l6a2"/> superbi, <anchor xml:id="l6a3"/>ambiçiosi<anchor xml:id="l6a4"/> et <anchor xml:id="l6a5"/><supplied>[d]</supplied>iri<anchor xml:id="l6a6"/>,
	        </l>
            <l xml:id="l7">
		      mova i nostri sospiri
	        </l>
            <l xml:id="l8">
		      te a <anchor xml:id="l8a1"/>vendicar<anchor xml:id="l8a2"/> già l’onte d’isforçati.
	        </l>
        </lg>
        <lg>
            <l xml:id="l9">
		      <anchor xml:id="l9a1"/><anchor xml:id="l9a5"/>Chi falso monta<anchor xml:id="l9a6"/>, <anchor xml:id="l9a3"/>folminando<anchor xml:id="l9a4"/> <anchor xml:id="l9a7"/>piove<anchor xml:id="l9a8"/>,<anchor xml:id="l9a2"/>
	        </l>
            <l xml:id="l10" n="10">
		      chi tosto ’ngrassa tosto si disolve.
	        </l><anchor xml:id="l10a1"/>
        </lg>
       </body>
