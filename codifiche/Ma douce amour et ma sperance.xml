            <lg>
                <l xml:id="l1"> Ma douce amour et <anchor xml:id="l1a1"/>ma sperance<anchor xml:id="l1a2"/>,</l>
                <l xml:id="l2"> je <anchor xml:id="l2a1"/>vos<anchor xml:id="l2a2"/> creant de bon cuer vray </l>
                <l xml:id="l3"> que de ce <anchor xml:id="l3a1"/>qu’a<anchor xml:id="l3a2"/> vous fis fiance</l>
                <l xml:id="l4"> <anchor xml:id="l4a1"/>jusque a<anchor xml:id="l4a2"/> la mort bien atendray.</l>
            </lg>
            <lg>
                <l xml:id="l5" n="5"> Et sans <anchor xml:id="l5a1"/>mentire<anchor xml:id="l5a2"/> <anchor xml:id="l5a3"/>aiés<anchor xml:id="l5a4"/> certance</l>
                <l xml:id="l6"> <anchor xml:id="l6a1"/>que onques<anchor xml:id="l6a2"/> <anchor xml:id="l6a3"/>nulle<anchor xml:id="l6a4"/> autre serviray:</l>
                <l xml:id="l7"> je sui mis en <anchor xml:id="l7a3"/><anchor xml:id="l7a1"/>voutre<anchor xml:id="l7a2"/><anchor xml:id="l7a4"/> obeisance</l>
                <l xml:id="l8"> et tous jours <anchor xml:id="l8a1"/>mez<anchor xml:id="l8a2"/> ensi seray.</l>
                <l xml:id="l9"> Et vous <anchor xml:id="l9a1"/>sacchiés<anchor xml:id="l9a2"/> bien sans doubtance</l>
                <l xml:id="l10" n="10"> qu’<anchor xml:id="l10a1"/>onques<anchor xml:id="l10a2"/> ne vous <anchor xml:id="l10a3"/>oblïeray<anchor xml:id="l10a4"/></l>
                <l xml:id="l11"> tant <anchor xml:id="l11a1"/>qu’en moi<anchor xml:id="l11a2"/> <anchor xml:id="l11a3"/>facche<anchor xml:id="l11a4"/> demorance</l>
                <l xml:id="l12"> la rien qu’<anchor xml:id="l12a1"/>onques<anchor xml:id="l12a2"/> vi ne <anchor xml:id="l12a3"/>veray<anchor xml:id="l12a4"/>.</l>
            </lg>
            
