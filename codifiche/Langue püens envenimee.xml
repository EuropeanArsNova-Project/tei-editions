            <lg>
                <l xml:id="l1">
                    Langue püens envenimee,
                </l>
                <l xml:id="l2">
                    poyndant poynture, vissïeuse, 
                </l>
                <l xml:id="l3">
                    langue de mensongne foree,    
                </l>
                <l xml:id="l4">
                    langue trop parlans, envïeuse, 
                </l>
                <l xml:id="l5" n="5">
                    ta moursure est plus perilleuse
                </l>
                <l xml:id="l6">
                    que poynture de scorpïon.   
                </l>
                <l xml:id="l7">
                    De ta parole venineuse 
                </l>
                <l xml:id="l8">
                    <hi rend="italic">qui te donra <anchor xml:id="l8a1"/>punis<supplied>[ï]</supplied>on<anchor xml:id="l8a2"/>?</hi>
                </l>
            </lg>
