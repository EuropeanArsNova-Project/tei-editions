        <body>
            <lg>
                <l xml:id="l1">
                    Il n’est si grant possessïon
                </l>
                <l xml:id="l2">
                    dont homme vesquit richement,
                </l>
                <l xml:id="l3">
                    s’il n’a sens et discrecïon
                </l>
                <l xml:id="l4">
                    pour <anchor xml:id="l4a1"/>so<supplied>[i]</supplied><anchor xml:id="l4a2"/> gouverner saigement,
                </l>
                <l xml:id="l5" n="5">
                    car par sens puet homs largement
                </l>
                <l xml:id="l6">
                    despendre, garder et acquerre.
                </l>
                <l xml:id="l7">
                    <hi rend="italic">Pour ce dist on communement:</hi>
                </l>
                <l xml:id="l8">
                    <hi rend="italic">tant vault li homs, tant vault sa terre.</hi>
                </l>
            </lg>
            <lg>
                <l xml:id="l9">
                    Par sens a homs provisïon
                </l>
                <l xml:id="l10" n="10">
                    au temps a venir cautement,
                </l>
                <l xml:id="l11">
                    et a ymaginacïon
                </l>
                <l xml:id="l12">
                    au temps passé et <anchor xml:id="l12a1"/><supplied>[au]</supplied><anchor xml:id="l12a2"/> present, 
                </l>
                <l xml:id="l13">
                    si que besoing ne le souprent,
                </l>
                <l xml:id="l14">
                    et povreté point ne l’enserre.
                </l>
                <l xml:id="l15" n="15">
                    <hi rend="italic">Pour ce <supplied xml:id="supplied1">dist on communement:</supplied></hi>
                </l>
                <l xml:id="l16">
                    <hi rend="italic"><supplied xml:id="supplied2">tant vault li homs, tant vault sa terre</supplied>.</hi>
                </l>
            </lg>
            <lg>
                <l xml:id="l17">
                    Crainte, amour et affectïon
                </l>
                <l xml:id="l18">
                    a de voisin et de parent,
                </l>
                <l xml:id="l19">
                    et <anchor xml:id="l19a1"/><supplied>[aussi]</supplied><anchor xml:id="l19a2"/> en subiectïon
                </l>
                <l xml:id="l20" n="20">
                    mantient ses subgés loyalment,
                </l>
                <l xml:id="l21">
                    car homs qui a grant tenement
                </l>
                <l xml:id="l22">
                    voit on avoir <anchor xml:id="l22a1"/>o<supplied>[u]</supplied> pai<supplied>[s]</supplied><anchor xml:id="l22a2"/> ou guerre.
                </l>
                <l xml:id="l23">
                    <hi rend="italic">Pour ce <supplied xml:id="supplied3">dist on communement:</supplied></hi>
                </l>
                <l xml:id="l24">
                    <hi rend="italic"><supplied xml:id="supplied4">tant vault li homs, tant vault sa terre</supplied>.</hi>
                </l>
            </lg>
        </body>
