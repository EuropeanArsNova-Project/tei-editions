      <body>
         <lg>
            <l xml:id="l1">
                Serva  <anchor xml:id="l1a1"/>ciascuno <anchor xml:id="l1a2"/>com’è<anchor xml:id="l1a3"/> facto a lui,
            </l>
            <l xml:id="l2">
                <anchor xml:id="l2a1"/>faccia <anchor xml:id="l2a2"/> per sì e lassi stare altrui.
            </l>
        </lg>
        <lg>
            <l xml:id="l3">
                Non serve chi non crede
            </l>
            <l xml:id="l4">
                per quel <anchor xml:id="l4a1"/>do<supplied reason="illegible">[n]</supplied><anchor xml:id="l4a2"/> tanto <anchor xml:id="l4a3"/>aver<anchor xml:id="l4a4"/> possa per sé,
            </l>
            <l xml:id="l5" n="5">
                sì che ben <anchor xml:id="l5a1"/>chiar<anchor xml:id="l5a2"/> se vede	
            </l>
            <l xml:id="l6">
                che ogi non c’è amor né data fé.
            </l>
            <l xml:id="l7">
                Per ogne modo adonca far se dé
            </l>
            <l xml:id="l8">
                de quel ad altri che ven facto a lui.
            </l>
         </lg>
      </body>
