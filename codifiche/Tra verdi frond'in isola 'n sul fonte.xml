        <lg>
            <l xml:id="l1">
		    Tra verdi frond’ in isola ’n sul fonte
	    </l>
            <l xml:id="l2">
		    <anchor xml:id="l2a1"/>vidi<anchor xml:id="l2a2"/> un’orsa c’odorav’ un fiore,
	    </l>
            <l xml:id="l3">
		    che fu già donna <anchor xml:id="l3a1"/>infiammata<anchor xml:id="l3a2"/> d’amore.
	    </l>
            <l xml:id="l4">
		    <supplied reason="illegible">[…]</supplied>
	    </l>
            <l xml:id="l5" n="5">
		    <supplied reason="illegible">[…]</supplied>
	    </l>
            <l xml:id="l6">
		    <supplied reason="illegible">[…]</supplied>
	    </l>
        </lg>
        <lg>
            <l xml:id="l7">
		    Trassemi Venus al ciel dilectoso,
	    </l>
            <l xml:id="l8">
		    sì c’ancor tremo di fred’ amoroso.
	    </l>
        </lg>
