        <body>
            <lg>
                <l xml:id="l1">
                    Le grant desir que j’ay du retourner
                </l>
                <l xml:id="l2">
                    devers vous, <anchor xml:id="l2a1"/>douche<anchor xml:id="l2a2"/> dame de valour,
                </l>
                <l xml:id="l3">
                    fet tout <anchor xml:id="l3a3"/>mon cuer<anchor xml:id="l3a4"/> <anchor xml:id="l3a1"/><supplied>[en]</supplied><anchor xml:id="l3a2"/>fondre et secchier,
                </l>
                <l xml:id="l4">
                    ansi ma vie fenis de jour en jour,
                </l>    
                <l xml:id="l5" n="5">
                    car vrayemant, belle dame d’<anchor xml:id="l5a1"/><supplied>[h]</supplied><anchor xml:id="l5a2"/>onour,
                </l>
                <l xml:id="l6">
                    tant con ne voy voutre beauté exmeréa,
                </l>
                <l xml:id="l7">
                    <hi rend="italic"><anchor xml:id="l7a1"/>n’ystra<anchor xml:id="l7a2"/> mon cuer <anchor xml:id="l7a3"/>de dolereux panséa<anchor xml:id="l7a4"/>.</hi>
                </l>
            </lg>
